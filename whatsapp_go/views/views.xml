<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="sale_order_whatsapp_inherit">
      <field name="name">sale.order.whatsapp.inherit</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
        <button name="action_quotation_send" position="after">
          <button name="send_pdf_for_whatsapp" id="send_by_whatsapp" string="Send by Whatsapp" type="object" class="oe_highlight"/>
        </button>

        
      </field>
    </record>

    <record model="ir.ui.view" id="invoice_whatsapp_inherit">
      <field name="name">account.move.whatsapp.inherit</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">
          <xpath expr="//header" position="inside">
            <button name="send_pdf_for_whatsapp"  string="Send by Whatsapp" type="object" class="oe_highlight"/>
          </xpath>

          <xpath expr="//field[@name='invoice_date']" position="after">
            <field name="followup_date" />
          </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="res_partner_inherit_form_view">
      <field name="name">res.patner.inherit</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
          <xpath expr="//field[@name='mobile']" position="after">
            <field name="country_id" />
          </xpath>
      </field>
    </record>

