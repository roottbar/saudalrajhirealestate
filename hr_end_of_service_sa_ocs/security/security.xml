<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Security Categories -->
        <record id="module_category_hr_end_of_service" model="ir.module.category">
            <field name="name">تصفية نهاية الخدمة</field>
            <field name="description">إدارة تصفيات نهاية الخدمة والإجازات السنوية</field>
            <field name="sequence">10</field>
        </record>
        
        <!-- Security Groups -->
        
        <!-- HR End of Service User -->
        <record id="group_hr_end_of_service_user" model="res.groups">
            <field name="name">مستخدم تصفية نهاية الخدمة</field>
            <field name="category_id" ref="module_category_hr_end_of_service"/>
            <field name="comment">يمكن للمستخدم عرض وإنشاء تصفيات نهاية الخدمة الخاصة به</field>
        </record>
        
        <!-- HR End of Service Officer -->
        <record id="group_hr_end_of_service_officer" model="res.groups">
            <field name="name">موظف الموارد البشرية</field>
            <field name="category_id" ref="module_category_hr_end_of_service"/>
            <field name="implied_ids" eval="[(4, ref('group_hr_end_of_service_user'))]"/>
            <field name="comment">يمكن لموظف الموارد البشرية إدارة جميع تصفيات نهاية الخدمة</field>
        </record>
        
        <!-- HR End of Service Manager -->
        <record id="group_hr_end_of_service_manager" model="res.groups">
            <field name="name">مدير الموارد البشرية</field>
            <field name="category_id" ref="module_category_hr_end_of_service"/>
            <field name="implied_ids" eval="[(4, ref('group_hr_end_of_service_officer'))]"/>
            <field name="comment">يمكن لمدير الموارد البشرية إدارة جميع تصفيات نهاية الخدمة والموافقة عليها</field>
        </record>
        
        <!-- Record Rules -->
        
        <!-- End of Service Settlement Rules -->
        
        <!-- User can only see their own settlements -->
        <record id="hr_end_of_service_user_rule" model="ir.rule">
            <field name="name">تصفية نهاية الخدمة: المستخدم العادي</field>
            <field name="model_id" ref="model_hr_end_of_service"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_hr_end_of_service_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- HR Officer can see all settlements in their company -->
        <record id="hr_end_of_service_officer_rule" model="ir.rule">
            <field name="name">تصفية نهاية الخدمة: موظف الموارد البشرية</field>
            <field name="model_id" ref="model_hr_end_of_service"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_hr_end_of_service_officer'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- HR Manager can see all settlements -->
        <record id="hr_end_of_service_manager_rule" model="ir.rule">
            <field name="name">تصفية نهاية الخدمة: مدير الموارد البشرية</field>
            <field name="model_id" ref="model_hr_end_of_service"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_hr_end_of_service_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Annual Leave Settlement Rules -->
        
        <!-- User can only see their own annual leave settlements -->
        <record id="hr_annual_leave_settlement_user_rule" model="ir.rule">
            <field name="name">تصفية الإجازة السنوية: المستخدم العادي</field>
            <field name="model_id" ref="model_hr_annual_leave_settlement"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_hr_end_of_service_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- HR Officer can see all annual leave settlements in their company -->
        <record id="hr_annual_leave_settlement_officer_rule" model="ir.rule">
            <field name="name">تصفية الإجازة السنوية: موظف الموارد البشرية</field>
            <field name="model_id" ref="model_hr_annual_leave_settlement"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_hr_end_of_service_officer'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- HR Manager can see all annual leave settlements -->
        <record id="hr_annual_leave_settlement_manager_rule" model="ir.rule">
            <field name="name">تصفية الإجازة السنوية: مدير الموارد البشرية</field>
            <field name="model_id" ref="model_hr_annual_leave_settlement"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_hr_end_of_service_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Wizard Rules -->
        
        <!-- End of Service Wizard Rules -->
        <record id="hr_end_of_service_wizard_officer_rule" model="ir.rule">
            <field name="name">معالج تصفية نهاية الخدمة: موظف الموارد البشرية</field>
            <field name="model_id" ref="model_hr_end_of_service_wizard"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_hr_end_of_service_officer'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Annual Leave Settlement Wizard Rules -->
        <record id="hr_annual_leave_settlement_wizard_officer_rule" model="ir.rule">
            <field name="name">معالج تصفية الإجازة السنوية: موظف الموارد البشرية</field>
            <field name="model_id" ref="model_hr_annual_leave_settlement_wizard"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_hr_end_of_service_officer'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
    </data>
</odoo>
