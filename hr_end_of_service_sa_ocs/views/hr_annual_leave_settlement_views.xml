<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Tree View -->
        <record id="view_hr_annual_leave_settlement_tree" model="ir.ui.view">
            <field name="name">hr.annual.leave.settlement.tree</field>
            <field name="model">hr.annual.leave.settlement</field>
            <field name="arch" type="xml">
                <list string="تصفيات الإجازة السنوية" decoration-info="state=='draft'" decoration-success="state=='approved'" decoration-warning="state=='confirmed'" decoration-danger="state=='cancelled'">
                    <field name="employee_id"/>
                    <field name="calculation_date"/>
                    <field name="settlement_type"/>
                    <field name="settlement_period_from"/>
                    <field name="settlement_period_to"/>
                    <field name="total_leave_days"/>
                    <field name="used_leave_days"/>
                    <field name="remaining_leave_days"/>
                    <field name="daily_salary" sum="إجمالي الراتب اليومي"/>
                    <field name="settlement_amount" sum="إجمالي مبلغ التصفية"/>
                    <field name="net_amount" sum="صافي المبلغ"/>
                    <field name="state" widget="badge"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </list>
            </field>
        </record>
        
        <!-- Form View -->
        <record id="view_hr_annual_leave_settlement_form" model="ir.ui.view">
            <field name="name">hr.annual.leave.settlement.form</field>
            <field name="model">hr.annual.leave.settlement</field>
            <field name="arch" type="xml">
                <form string="تصفية الإجازة السنوية">
                    <header>
                        <button name="action_confirm" string="تأكيد" type="object"  class="oe_highlight"/>
                        <button name="action_approve" string="اعتماد" type="object"  class="oe_highlight" groups="hr.group_hr_manager"/>
                        <button name="action_set_to_paid" string="تعيين كمدفوع" type="object"  class="oe_highlight" groups="hr.group_hr_manager"/>
                        <button name="action_cancel" string="إلغاء" type="object"  confirm="هل أنت متأكد من إلغاء هذه التصفية؟"/>
                        <button name="action_reset_to_draft" string="إعادة تعيين كمسودة" type="object" />
                        <button name="action_print_settlement" string="طباعة" type="object"  class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,approved,paid"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="display_name" readonly="1"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group name="employee_info" string="معلومات الموظف">
                                <field name="employee_id" options="{'no_create': True, 'no_edit': True}"/>
                                <field name="contract_id" options="{'no_create': True}"/>
                                <field name="calculation_date"/>
                                <field name="settlement_type"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            <group name="period_info" string="فترة التصفية">
                                <field name="settlement_period_from"/>
                                <field name="settlement_period_to"/>
                                <field name="settlement_date"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="تفاصيل الراتب" name="salary_details">
                                <group>
                                    <group name="salary_components" string="مكونات الراتب">
                                        <field name="basic_salary"/>
                                        <field name="housing_allowance"/>
                                        <field name="transport_allowance"/>
                                        <field name="other_allowances"/>
                                        <field name="total_salary" readonly="1" class="oe_subtotal_footer_separator"/>
                                        <field name="daily_salary" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="تفاصيل الإجازة" name="leave_details">
                                <group>
                                    <group name="leave_days" string="أيام الإجازة">
                                        <field name="total_leave_days"/>
                                        <field name="used_leave_days" readonly="1"/>
                                        <field name="remaining_leave_days" readonly="1"/>
                                    </group>
                                    <group name="settlement_amounts" string="مبالغ التصفية">
                                        <field name="settlement_amount" readonly="1"/>
                                        <field name="other_benefits"/>
                                        <field name="gross_amount" readonly="1" class="oe_subtotal_footer_separator"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="الخصومات والصافي" name="deductions">
                                <group>
                                    <group name="deductions_group" string="الخصومات">
                                        <field name="loan_deductions"/>
                                        <field name="advance_deductions"/>
                                        <field name="other_deductions"/>
                                        <field name="total_deductions" readonly="1" class="oe_subtotal_footer_separator"/>
                                    </group>
                                    <group name="net_group" string="صافي المبلغ">
                                        <field name="net_amount" readonly="1" class="oe_subtotal_footer_separator"/>
                                        <field name="currency_id" invisible="1"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="ملاحظات" name="notes">
                                <field name="notes" placeholder="أدخل أي ملاحظات إضافية هنا..."/>
                            </page>
                            
                            <page string="معلومات النظام" name="system_info">
                                <group>
                                    <group>
                                        <field name="create_uid" readonly="1"/>
                                        <field name="create_date" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="write_uid" readonly="1"/>
                                        <field name="write_date" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- Search View -->
        <record id="view_hr_annual_leave_settlement_search" model="ir.ui.view">
            <field name="name">hr.annual.leave.settlement.search</field>
            <field name="model">hr.annual.leave.settlement</field>
            <field name="arch" type="xml">
                <search string="البحث في تصفيات الإجازة السنوية">
                    <field name="employee_id" string="الموظف"/>
                    <field name="calculation_date" string="تاريخ الحساب"/>
                    <field name="settlement_type" string="نوع التصفية"/>
                    <field name="state" string="الحالة"/>
                    
                    <filter name="draft" string="مسودة" domain="[('state', '=', 'draft')]"/>
                    <filter name="confirmed" string="مؤكد" domain="[('state', '=', 'confirmed')]"/>
                    <filter name="approved" string="معتمد" domain="[('state', '=', 'approved')]"/>
                    <filter name="paid" string="مدفوع" domain="[('state', '=', 'paid')]"/>
                    <separator/>
                    <filter name="annual" string="سنوية" domain="[('settlement_type', '=', 'annual')]"/>
                    <filter name="end_of_service" string="نهاية خدمة" domain="[('settlement_type', '=', 'end_of_service')]"/>
                    <filter name="custom" string="مخصصة" domain="[('settlement_type', '=', 'custom')]"/>
                    <separator/>
                    <filter name="current_month" string="الشهر الحالي" domain="[('calculation_date', '>=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-01')), ('calculation_date', '&lt;', (context_today().replace(day=1) + relativedelta(months=1)).strftime('%Y-%m-%d'))]"/>
                    <filter name="current_year" string="السنة الحالية" domain="[('calculation_date', '>=', context_today().strftime('%Y-01-01')), ('calculation_date', '&lt;=', context_today().strftime('%Y-12-31'))]"/>
                    
                    <group expand="0" string="تجميع حسب">
                        <filter name="group_employee" string="الموظف" context="{'group_by': 'employee_id'}"/>
                        <filter name="group_settlement_type" string="نوع التصفية" context="{'group_by': 'settlement_type'}"/>
                        <filter name="group_state" string="الحالة" context="{'group_by': 'state'}"/>
                        <filter name="group_calculation_date" string="تاريخ الحساب" context="{'group_by': 'calculation_date'}"/>
                        <filter name="group_company" string="الشركة" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Kanban View -->
        <record id="view_hr_annual_leave_settlement_kanban" model="ir.ui.view">
            <field name="name">hr.annual.leave.settlement.kanban</field>
            <field name="model">hr.annual.leave.settlement</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="employee_id"/>
                    <field name="calculation_date"/>
                    <field name="net_amount"/>
                    <field name="state"/>
                    <field name="settlement_type"/>
                    <field name="remaining_leave_days"/>
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                                <div class="o_dropdown_kanban dropdown">
                                    <a class="dropdown-toggle o-no-caret btn" type="button" data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <t t-if="widget.editable"><a type="edit" class="dropdown-item">تعديل</a></t>
                                        <t t-if="widget.deletable"><a type="delete" class="dropdown-item">حذف</a></t>
                                        <a name="action_print_settlement" type="object" class="dropdown-item">طباعة</a>
                                    </div>
                                </div>
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title"><field name="employee_id"/></strong>
                                        </div>
                                        <span class="fa fa-circle" t-attf-style="color: #{record.state.raw_value == 'paid' ? 'green' : record.state.raw_value == 'approved' ? 'orange' : 'red'};"/>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <field name="calculation_date"/><br/>
                                        <t t-esc="record.settlement_type.value"/><br/>
                                        <span>أيام الإجازة المتبقية: <t t-esc="record.remaining_leave_days.value"/></span><br/>
                                        <strong>صافي المبلغ: <field name="net_amount" widget="monetary"/></strong>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- Action -->
        <record id="action_hr_annual_leave_settlement" model="ir.actions.act_window">
            <field name="name">تصفيات الإجازة السنوية</field>
            <field name="res_model">hr.annual.leave.settlement</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="search_view_id" ref="view_hr_annual_leave_settlement_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    إنشاء تصفية إجازة سنوية جديدة
                </p>
                <p>
                    يمكنك إنشاء تصفيات الإجازة السنوية للموظفين.
                    سيتم حساب مبلغ التصفية تلقائياً بناءً على أيام الإجازة المتبقية والراتب اليومي.
                </p>
            </field>
        </record>
        
        <!-- Menu Item -->
        <menuitem id="menu_hr_annual_leave_settlement" name="تصفيات الإجازة السنوية" parent="menu_hr_end_of_service_root" action="action_hr_annual_leave_settlement" sequence="20"/>
        
    </data>
</odoo>
