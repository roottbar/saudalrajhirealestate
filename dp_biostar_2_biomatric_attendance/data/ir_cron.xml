<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_get_attendance_data_quaterly" model="ir.cron">
            <field name="name">Get Attendance Data</field>
            <field name="model_id" ref="model_biostar_device_sync"/>
            <field name="state">code</field>
            <field name="code">model.sync_attendance()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">3</field>
            <field name="interval_type">hours</field>
        </record>

        <record id="ir_cron_create_attendance_data_daily" model="ir.cron">
            <field name="name">Create Attendance Data (Daily)</field>
            <field name="model_id" ref="model_attendance_log"/>
            <field name="state">code</field>
            <field name="code">model.create_attendance()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
        </record>

        <record id="ir_cron_send_attendance_report_weekly" model="ir.cron">
            <field name="name">Send Attendance report (Weekly)</field>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="state">code</field>
            <field name="code">model.send_overtime_email_with_report()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
        </record>
    </data>
</odoo>
