<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_archive_wizard_form" model="ir.ui.view">
        <field name="name">account.archive.wizard.form</field>
        <field name="model">account.archive.wizard</field>
        <field name="arch" type="xml">
            <form string="Archive Accounts">
                <group>
                    <field name="account_ids" widget="many2many_tags"/>
                    <field name="reason"/>
                </group>
                <footer>
                    <button name="action_archive_accounts" string="Archive" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>