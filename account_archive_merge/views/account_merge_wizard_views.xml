<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_merge_wizard_form" model="ir.ui.view">
        <field name="name">account.merge.wizard.form</field>
        <field name="model">account.merge.wizard</field>
        <field name="arch" type="xml">
            <form string="Merge Accounts">
                <group>
                    <field name="source_account_ids" widget="many2many_tags"/>
                    <field name="target_account_id"/>
                    <field name="reason"/>
                </group>
                <footer>
                    <button name="action_merge_accounts" string="Merge" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>