<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- إضافة حقول الأرشفة والدمج لنموذج الحساب -->
    <record id="view_account_form_archive" model="ir.ui.view">
        <field name="name">account.account.form.archive</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <field name="deprecated" position="after">
                <field name="is_archived" readonly="1"/>
                <field name="archived_date" readonly="1" attrs="{'invisible': [('is_archived', '=', False)]}"/>
                <field name="archived_by" readonly="1" attrs="{'invisible': [('is_archived', '=', False)]}"/>
                <field name="merged_into_account_id" readonly="1" attrs="{'invisible': [('merged_into_account_id', '=', False)]}"/>
            </field>
        </field>
    </record>
    
    <!-- إضافة أزرار الأرشفة والدمج -->
    <record id="view_account_form_buttons" model="ir.ui.view">
        <field name="name">account.account.form.buttons</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <form position="inside">
                <header>
                    <button name="action_archive_account" 
                            string="Archive Account" 
                            type="object" 
                            class="btn-warning"
                            attrs="{'invisible': [('is_archived', '=', True)]}"/>
                    <button name="action_unarchive_account" 
                            string="Unarchive Account" 
                            type="object" 
                            class="btn-success"
                            attrs="{'invisible': [('is_archived', '=', False)]}"/>
                </header>
            </form>
        </field>
    </record>
    
    <!-- قائمة الحسابات مع خيار إظهار المؤرشفة -->
    <record id="view_account_list_archive" model="ir.ui.view">
        <field name="name">account.account.tree.archive</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_list"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="is_archived"/>
            </field>
        </field>
    </record>
    
    <!-- إجراءات الأرشفة والدمج -->
    <record id="action_account_merge" model="ir.actions.act_window">
        <field name="name">Merge Accounts</field>
        <field name="res_model">account.merge.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_account_account"/>
        <field name="binding_view_types">list</field>
    </record>
    
    <record id="action_account_archive" model="ir.actions.act_window">
        <field name="name">Archive Accounts</field>
        <field name="res_model">account.archive.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_account_account"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>
