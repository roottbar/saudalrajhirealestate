<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_budget_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="b">
                <div class="page">
                    <h2>تقرير الميزانية: <t t-esc="b.name"/></h2>
                    <p>
                        القسم: <t t-esc="b.department_id.name"/>
                        <t t-if="b.project_id"> | المشروع: <t t-esc="b.project_id.name"/></t>
                    </p>
                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <th>العملة (SAR)</th>
                                <th>المبلغ الكلي</th>
                                <th>المصروف</th>
                                <th>المتبقي</th>
                                <th>نسبة الإنفاق %</th>
                                <th>الفترة</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><t t-esc="(b.sar_currency_id and b.sar_currency_id.name) or 'SAR'"/></td>
                                <td><t t-esc="b.total_amount"/></td>
                                <td><t t-esc="b.spent_amount"/></td>
                                <td><t t-esc="b.remaining_amount"/></td>
                                <td><t t-esc="'%.2f' % b.spent_percentage"/></td>
                                <td>
                                    <t t-esc="b.date_start"/> — <t t-esc="b.date_end"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <h3>أوامر الشراء</h3>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>رقم الأمر</th>
                                <th>المورد</th>
                                <th>التاريخ</th>
                                <th>الحالة</th>
                                <th>المبلغ (SAR)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="b.purchase_order_ids" t-as="po">
                                <tr>
                                    <td><t t-esc="po.name"/></td>
                                    <td><t t-esc="po.partner_id.name"/></td>
                                    <td><t t-esc="po.date_order"/></td>
                                    <td><t t-esc="po.state"/></td>
                                    <td><t t-esc="po.total_in_sar"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>