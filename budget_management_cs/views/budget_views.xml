<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_budget_budget_tree" model="ir.ui.view">
            <field name="name">budget.budget.tree</field>
            <field name="model">budget.budget</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="department_id"/>
                    <field name="project_id"/>
                    <field name="total_amount" string="المبلغ الكلي (SAR)"/>
                    <field name="spent_amount" string="المبلغ المصروف (SAR)"/>
                    <field name="remaining_amount" string="المتبقي (SAR)"/>
                    <field name="spent_percentage"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_budget_budget_form" model="ir.ui.view">
            <field name="name">budget.budget.form</field>
            <field name="model">budget.budget</field>
            <field name="arch" type="xml">
                <form string="الميزانية">
                    <header>
                        <button name="action_set_draft" type="object" string="إعادة إلى مسودة" groups="budget_management_cs.group_budget_manager" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                        <button name="action_approve" type="object" string="تعمييد" groups="budget_management_cs.group_budget_manager" attrs="{'invisible': [('state', '=', 'approved')]}"/>
                    </header>
                    <sheet>
                        <separator string="جميع القيم معروضة بالريال السعودي (SAR)"/>
                        <group>
                            <field name="name"/>
                            <field name="department_id"/>
                            <field name="project_id"/>
                            <field name="company_id"/>
                            <!-- مربع نص الملاحظات أسفل حقل المشروع -->
                            <field name="note"/>
                            <field name="state" readonly="1" widget="statusbar"/>
                        </group>
                        <group>
                            <field name="currency_id" domain="[('name','=','SAR')]" attrs="{'readonly': True}"/>
                            <field name="total_amount" string="المبلغ الكلي (SAR)" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                            <field name="spent_amount" string="المبلغ المصروف (SAR)" readonly="1"/>
                            <field name="remaining_amount" string="المتبقي (SAR)" readonly="1"/>
                            <field name="spent_percentage" readonly="1" widget="progressbar"/>
                        </group>
                        <group>
                            <field name="period_type" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                            <field name="date_start" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                            <field name="date_end" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                        </group>
                        <notebook>
                            <page string="أوامر الشراء">
                                <field name="purchase_order_ids" context="{'default_budget_id': active_id}">
                                    <tree string="أوامر الشراء المرتبطة" editable="false">
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="date_order"/>
                                        <field name="state"/>
                                        <field name="total_in_sar" string="الإجمالي (SAR)" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="الفواتير">
                                <field name="invoice_ids" domain="[('move_type', '=', 'in_invoice')]" context="{'default_budget_id': active_id}"/>
                            </page>
                            <page string="كل الحركات">
                                <field name="budget_move_ids" context="{'default_budget_id': active_id}"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_budget_budget_graph" model="ir.ui.view">
            <field name="name">budget.budget.graph</field>
            <field name="model">budget.budget</field>
            <field name="arch" type="xml">
                <graph string="نسبة الإنفاق (قيم SAR)" type="bar">
                    <field name="name" type="row"/>
                    <field name="spent_percentage" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="view_budget_budget_pivot" model="ir.ui.view">
            <field name="name">budget.budget.pivot</field>
            <field name="model">budget.budget</field>
            <field name="arch" type="xml">
                <pivot string="تحليل الميزانيات (جميع القيم بالريال السعودي)">
                    <field name="department_id" type="col"/>
                    <field name="project_id" type="col"/>
                    <field name="total_amount" string="المبلغ الكلي (SAR)" type="measure"/>
                    <field name="spent_amount" string="المبلغ المصروف (SAR)" type="measure"/>
                    <field name="remaining_amount" string="المتبقي (SAR)" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="action_budget_budget" model="ir.actions.act_window">
            <field name="name">الميزانيات</field>
            <field name="res_model">budget.budget</field>
            <field name="view_mode">tree,graph,pivot,form</field>
        </record>

        <menuitem id="menu_budget_budgets" name="الميزانيات" parent="menu_budget_root" action="action_budget_budget" sequence="20"/>
    </data>
</odoo>