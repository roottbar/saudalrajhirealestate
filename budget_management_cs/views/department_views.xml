<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_budget_department_tree" model="ir.ui.view">
            <field name="name">budget.department.tree</field>
            <field name="model">budget.department</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_budget_department_form" model="ir.ui.view">
            <field name="name">budget.department.form</field>
            <field name="model">budget.department</field>
            <field name="arch" type="xml">
                <form string="القسم">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                        <group string="إعدادات محاسبية">
                            <field name="budget_journal_id"/>
                            <field name="account_budget_allocation_id" context="{'show_parent_account': True}"/>
                            <field name="account_commitment_id" context="{'show_parent_account': True}"/>
                            <field name="account_expense_id" context="{'show_parent_account': True}"/>
                        </group>
                        <group string="الحسابات المرتبطة">
                            <field name="account_ids" widget="many2many_tags" options="{'no_create_edit': True}" context="{'show_parent_account': True}"/>
                        </group>
                        <notebook>
                            <page string="ملاحظات">
                                <field name="note"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_budget_department" model="ir.actions.act_window">
            <field name="name">الأقسام</field>
            <field name="res_model">budget.department</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_budget_root" name="إدارة الميزانيات" sequence="10"/>
        <menuitem id="menu_budget_settings" name="الإعدادات" parent="menu_budget_root" sequence="10"/>
        <menuitem id="menu_budget_departments" name="الأقسام" parent="menu_budget_settings" action="action_budget_department" sequence="10"/>
    </data>
</odoo>