<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_purchase_order_form_inherit_budget" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.budget</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook" position="before">
                    <group string="الميزانية">
                        <field name="budget_project_id"/>
                        <field name="budget_department_id"/>
                        <field name="budget_id"/>
                        <field name="budget_remaining_amount" readonly="1"/>
                    </group>
                </xpath>
                <!-- إضافة حقل الإجمالي بالريال السعودي تحت tax_total_json -->
                <xpath expr="//field[@name='tax_total_json']" position="after">
                    <label string="الإجمالي بالريال السعودي"/>
                    <field name="total_in_sar" readonly="1"/>
                </xpath>
                <!-- دعم نسخ أودو التي تستخدم tax_totals_json بدلاً من tax_total_json -->
                <xpath expr="//field[@name='tax_totals_json']" position="after">
                    <label string="الإجمالي بالريال السعودي"/>
                    <field name="total_in_sar" readonly="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>