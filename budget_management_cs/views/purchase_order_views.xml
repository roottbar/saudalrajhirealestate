<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_purchase_order_form_inherit_budget" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.budget</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook" position="before">
                    <group string="الميزانية">
                        <field name="budget_project_id"/>
                        <field name="budget_department_id"/>
                        <field name="budget_remaining_amount" readonly="1"/>
                        <field name="budget_id" invisible="1"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>