<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_budget_project_tree" model="ir.ui.view">
            <field name="name">budget.project.tree</field>
            <field name="model">budget.project</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="department_id"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_budget_project_form" model="ir.ui.view">
            <field name="name">budget.project.form</field>
            <field name="model">budget.project</field>
            <field name="arch" type="xml">
                <form string="المشروع">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="department_id"/>
                            <field name="active"/>
                        </group>
                        <notebook>
                            <page string="ملاحظات">
                                <field name="note"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_budget_project" model="ir.actions.act_window">
            <field name="name">المشاريع</field>
            <field name="res_model">budget.project</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_budget_projects" name="المشاريع" parent="menu_budget_settings" action="action_budget_project" sequence="20"/>
    </data>
</odoo>