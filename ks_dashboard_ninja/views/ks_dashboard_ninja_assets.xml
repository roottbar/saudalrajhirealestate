                    <link rel="stylesheet" type="text/css" href="/ks_dashboard_ninja/static/src/css/ks_dashboard_options.css"/>
                    <link rel="stylesheet" type="text/css" href="/ks_dashboard_ninja/static/src/css/ks_dashboard_ninja_kpi.css"/>
                    
                    <!-- JavaScript Files -->
                    <script type="text/javascript" src="/ks_dashboard_ninja/static/src/js/ks_dashboard_ninja.js"></script>
                    <script type="text/javascript" src="/ks_dashboard_ninja/static/src/js/ks_dashboard.js"></script>
