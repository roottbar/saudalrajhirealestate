                    <script type="text/javascript" src="/ks_dashboard_ninja/static/src/js/ks_import_dashboard.js"></script>
                    <script type="text/javascript" src="/ks_dashboard_ninja/static/src/js/ks_color_picker.js"></script>
                    <script type="text/javascript" src="/ks_dashboard_ninja/static/src/js/ks_dashboard_ninja_item.js"></script>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
