<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Payment Form View -->
        <record id="view_account_payment_form_rental" model="ir.ui.view">
            <field name="name">account.payment.form.rental</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="rental_order_id" 
                           attrs="{'invisible': [('payment_type', '!=', 'inbound')]}"
                           options="{'no_create': True, 'no_edit': True}"/>
                </field>
                
                <field name="amount" position="after">
                    <group string="فواتير أمر التأجير" 
                           attrs="{'invisible': [('rental_order_id', '=', False)]}" 
                           col="1">
                        
                        <!-- زر إضافة الفواتير -->
                        <div class="oe_button_box">
                            <button name="action_add_rental_invoices" 
                                    type="object" 
                                    string="إضافة فواتير" 
                                    class="btn-primary"
                                    attrs="{'invisible': [('rental_order_id', '=', False)]}"/>
                        </div>
                        
                        <!-- جدول الفواتير المحددة -->
                        <field name="rental_invoice_line_ids" nolabel="1">
                            <tree editable="bottom" create="false" delete="true">
                                <field name="selected" widget="boolean_toggle"/>
                                <field name="invoice_id" readonly="1"/>
                                <field name="invoice_date" readonly="1"/>
                                <field name="amount_total" readonly="1" sum="المجموع"/>
                                <field name="amount_residual" readonly="1" sum="المتبقي"/>
                                <field name="analytic_account_id" 
                                       attrs="{'required': [('selected', '=', True)]}"
                                       options="{'no_create': True}"/>
                                <field name="payment_amount" 
                                       attrs="{'readonly': [('selected', '=', False)]}"
                                       sum="مبلغ الدفع"/>
                                <field name="currency_id" invisible="1"/>
                            </tree>
                        </field>
                        
                        <!-- ملخص الدفع -->
                        <group string="ملخص الدفع" col="2">
                            <field name="amount" readonly="1" string="المبلغ الإجمالي"/>
                            <label string="سيتم توزيع هذا المبلغ على الفواتير المحددة" colspan="2"/>
                        </group>
                    </group>
                </field>
            </field>
        </record>
        
        <!-- Payment Tree View -->
        <record id="view_account_payment_tree_rental" model="ir.ui.view">
            <field name="name">account.payment.tree.rental</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="rental_order_id" optional="hide"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
