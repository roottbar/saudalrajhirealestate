<odoo>
    <data noupdate="1">
        <record id="suprema_device_rule" model="ir.rule">
            <field name="name">Suprema Device Access</field>
            <field name="model_id" ref="model_suprema_device"/>
            <field name="domain_force">
                ['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]
            </field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="suprema_attendance_log_rule" model="ir.rule">
            <field name="name">Suprema Attendance Log Access</field>
            <field name="model_id" ref="model_suprema_attendance_log"/>
            <field name="domain_force">
                ['|', ('device_id.company_id', '=', False), ('device_id.company_id', 'in', company_ids)]
            </field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>