<odoo>
    <record id="action_suprema_device" model="ir.actions.act_window">
        <field name="name">Suprema Devices</field>
        <field name="res_model">suprema.device</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure your Suprema biometric devices here
            </p>
        </field>
    </record>

    <record id="view_suprema_device_tree" model="ir.ui.view">
        <field name="name">suprema.device.tree</field>
        <field name="model">suprema.device</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="ip_address"/>
                <field name="port"/>
                <field name="connection_type"/>
                <field name="active"/>
                <field name="last_sync"/>
            </tree>
        </field>
    </record>

    <record id="view_suprema_device_form" model="ir.ui.view">
        <field name="name">suprema.device.form</field>
        <field name="model">suprema.device</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="test_connection" type="object" string="Test Connection" class="btn-primary"/>
                    <button name="download_attendance" type="object" string="Download Attendance" class="btn-secondary"/>
                    <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="ip_address"/>
                            <field name="port"/>
                        </group>
                        <group>
                            <field name="device_id"/>
                            <field name="connection_type"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Attendance Logs">
                            <field name="attendance_ids" context="{'default_device_id': id}">
                                <tree>
                                    <field name="employee_id"/>
                                    <field name="punch_time"/>
                                    <field name="status"/>
                                    <field name="is_processed"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>