<odoo>
    <record id="action_suprema_attendance" model="ir.actions.act_window">
        <field name="name">Suprema Attendance Logs</field>
        <field name="res_model">suprema.attendance.log</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_suprema_attendance_tree" model="ir.ui.view">
        <field name="name">suprema.attendance.tree</field>
        <field name="model">suprema.attendance.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id"/>
                <field name="device_id"/>
                <field name="punch_time"/>
                <field name="status"/>
                <field name="is_processed"/>
            </tree>
        </field>
    </record>

    <record id="view_suprema_attendance_form" model="ir.ui.view">
        <field name="name">suprema.attendance.form</field>
        <field name="model">suprema.attendance.log</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="device_id"/>
                        <field name="punch_time"/>
                        <field name="status"/>
                        <field name="is_processed"/>
                        <field name="attendance_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_employee_form_inherit" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.suprema</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <!-- استبدال xpath القديم بهذا التعديل الأكثر أماناً -->
            <xpath expr="//field[@name='address_home_id']" position="after">
                <field name="biometric_id" string="Biometric ID"/>
            </xpath>
        </field>
    </record>
</odoo>
