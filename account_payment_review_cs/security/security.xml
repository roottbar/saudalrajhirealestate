<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Review permission group -->
        <record id="group_payment_review" model="res.groups">
            <field name="name">Payment Review</field>
            <field name="category_id" ref="base.module_category_accounting"/>
        </record>

        <!-- Confirm permission group (implies review) -->
        <record id="group_payment_confirm" model="res.groups">
            <field name="name">Payment Confirm</field>
            <field name="category_id" ref="base.module_category_accounting"/>
            <field name="implied_ids" eval="[(4, ref('account_payment_review_cs.group_payment_review'))]"/>
        </record>
    </data>
</odoo>