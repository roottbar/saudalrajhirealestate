<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit sale order form view to modify product_id domain in order lines -->
        <record id="sale_order_form_view_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.rental.availability</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/list//field[@name='product_id']" position="attributes">
                    <attribute name="domain">[("rent_ok", "=", True)]</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
