<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit sale order line form view -->
        <record id="sale_order_line_form_view_inherit" model="ir.ui.view">
            <field name="name">sale.order.line.form.inherit.rental.availability</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']//field[@name='product_id']" position="attributes">
                    <attribute name="domain">[('rent_ok', '=', True)]</attribute>
                    <attribute name="context">{
                        'default_fromdate': parent.fromdate,
                        'default_todate': parent.todate,
                        'default_order_id': parent.id
                    }</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>