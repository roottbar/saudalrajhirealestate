<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Resume ATS Categories -->
        <record id="module_category_hr_resume_ats" model="ir.module.category">
            <field name="name">HR Resume ATS</field>
            <field name="description">Helps you manage resume analysis and ATS system.</field>
            <field name="sequence">3</field>
        </record>
        
        <!-- Resume ATS User Group -->
        <record id="group_hr_resume_ats_user" model="res.groups">
            <field name="name">Resume ATS User</field>
            <field name="category_id" ref="module_category_hr_resume_ats"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">The user can analyze resumes and view job positions.</field>
        </record>
        
        <!-- Resume ATS Officer Group -->
        <record id="group_hr_resume_ats_officer" model="res.groups">
            <field name="name">Resume ATS Officer</field>
            <field name="category_id" ref="module_category_hr_resume_ats"/>
            <field name="implied_ids" eval="[(4, ref('group_hr_resume_ats_user')), (4, ref('hr.group_hr_user'))]"/>
            <field name="comment">The officer can create and manage job positions and resume analyses.</field>
        </record>
        
        <!-- Resume ATS Manager Group -->
        <record id="group_hr_resume_ats_manager" model="res.groups">
            <field name="name">Resume ATS Manager</field>
            <field name="category_id" ref="module_category_hr_resume_ats"/>
            <field name="implied_ids" eval="[(4, ref('group_hr_resume_ats_officer')), (4, ref('hr.group_hr_manager'))]"/>
            <field name="comment">The manager has full access to all resume ATS features including deletion rights.</field>
        </record>
        
        <!-- Record Rules -->
        
        <!-- Resume Analysis: Users can only see their own analyses -->
        <record id="hr_resume_analysis_user_rule" model="ir.rule">
            <field name="name">Resume Analysis: User Access</field>
            <field name="model_id" ref="model_hr_resume_analysis"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_hr_resume_ats_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Resume Analysis: Officers can see all analyses in their company -->
        <record id="hr_resume_analysis_officer_rule" model="ir.rule">
            <field name="name">Resume Analysis: Officer Access</field>
            <field name="model_id" ref="model_hr_resume_analysis"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_hr_resume_ats_officer'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Resume Analysis: Managers have full access -->
        <record id="hr_resume_analysis_manager_rule" model="ir.rule">
            <field name="name">Resume Analysis: Manager Access</field>
            <field name="model_id" ref="model_hr_resume_analysis"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_hr_resume_ats_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Job Position: Users can only read published positions -->
        <record id="hr_job_position_user_rule" model="ir.rule">
            <field name="name">Job Position: User Access</field>
            <field name="model_id" ref="model_hr_job_position"/>
            <field name="domain_force">[('state', '=', 'published'), ('active', '=', True)]</field>
            <field name="groups" eval="[(4, ref('group_hr_resume_ats_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Job Position: Officers can manage positions in their company -->
        <record id="hr_job_position_officer_rule" model="ir.rule">
            <field name="name">Job Position: Officer Access</field>
            <field name="model_id" ref="model_hr_job_position"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_hr_resume_ats_officer'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Job Position: Managers have full access -->
        <record id="hr_job_position_manager_rule" model="ir.rule">
            <field name="name">Job Position: Manager Access</field>
            <field name="model_id" ref="model_hr_job_position"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_hr_resume_ats_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Resume Skills: Follow parent resume analysis access -->
        <record id="hr_resume_skill_rule" model="ir.rule">
            <field name="name">Resume Skill: Follow Resume Analysis Access</field>
            <field name="model_id" ref="model_hr_resume_skill"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <!-- Resume Experience: Follow parent resume analysis access -->
        <record id="hr_resume_experience_rule" model="ir.rule">
            <field name="name">Resume Experience: Follow Resume Analysis Access</field>
            <field name="model_id" ref="model_hr_resume_experience"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <!-- Resume Education: Follow parent resume analysis access -->
        <record id="hr_resume_education_rule" model="ir.rule">
            <field name="name">Resume Education: Follow Resume Analysis Access</field>
            <field name="model_id" ref="model_hr_resume_education"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
    </data>
</odoo>