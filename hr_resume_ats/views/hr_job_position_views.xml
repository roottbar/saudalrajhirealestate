<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Job Position Form View -->
        <record id="view_hr_job_position_form" model="ir.ui.view">
            <field name="name">hr.job.position.form</field>
            <field name="model">hr.job.position</field>
            <field name="arch" type="xml">
                <form string="Job Position">
                    <header>
                        <button name="action_publish" type="object" string="Publish" 
                                class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_close" type="object" string="Close" 
                                attrs="{'invisible': [('state', '!=', 'published')]}"/>
                        <button name="action_reset_to_draft" type="object" string="Reset to Draft" 
                                attrs="{'invisible': [('state', '=', 'draft')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,published,closed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_resume_analyses" type="object" class="oe_stat_button" icon="fa-file-text-o">
                                <field name="resume_analysis_count" widget="statinfo" string="Analyses"/>
                            </button>
                            <button name="%(action_hr_resume_analysis)d" type="action" class="oe_stat_button" icon="fa-bar-chart"
                                    context="{'search_default_job_position_id': active_id}">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="average_score" widget="float" digits="[16,1]"/>%
                                    </span>
                                    <span class="o_stat_text">Avg Score</span>
                                </div>
                            </button>
                        </div>
                        
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" 
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Job Title..."/>
                            </h1>
                            <div class="o_row">
                                <field name="code" placeholder="Job Code"/>
                            </div>
                        </div>
                        
                        <group>
                            <group name="basic_info" string="Basic Information">
                                <field name="department_id"/>
                                <field name="employment_type"/>
                                <field name="location"/>
                                <field name="remote_work"/>
                                <field name="active"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            <group name="salary_info" string="Salary Information">
                                <field name="currency_id" invisible="1"/>
                                <label for="salary_min" string="Salary Range"/>
                                <div class="o_row">
                                    <field name="salary_min" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <span> - </span>
                                    <field name="salary_max" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </div>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Job Description">
                                <field name="description" nolabel="1" placeholder="Enter detailed job description..."/>
                            </page>
                            
                            <page string="Requirements">
                                <group>
                                    <group name="experience_req" string="Experience Requirements">
                                        <field name="required_experience_years"/>
                                        <field name="preferred_experience_years"/>
                                    </group>
                                    <group name="education_req" string="Education Requirements">
                                        <field name="required_education_level"/>
                                        <field name="preferred_education_level"/>
                                    </group>
                                </group>
                                
                                <group name="skills_req" string="Skills Requirements">
                                    <field name="required_skills" placeholder="Enter required skills separated by commas (e.g., Python, SQL, Project Management)"/>
                                    <field name="preferred_skills" placeholder="Enter preferred skills separated by commas"/>
                                </group>
                                
                                <group name="keywords" string="ATS Keywords">
                                    <field name="keywords" placeholder="Enter important keywords for ATS optimization, separated by commas"/>
                                </group>
                            </page>
                            
                            <page string="Resume Analyses" attrs="{'invisible': [('resume_analysis_count', '=', 0)]}">
                                <field name="resume_analysis_ids" nolabel="1" readonly="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="candidate_name"/>
                                        <field name="candidate_email"/>
                                        <field name="overall_score" widget="progressbar"/>
                                        <field name="analysis_date"/>
                                        <field name="state" widget="badge"/>
                                        <field name="user_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- Job Position Tree View -->
        <record id="view_hr_job_position_tree" model="ir.ui.view">
            <field name="name">hr.job.position.tree</field>
            <field name="model">hr.job.position</field>
            <field name="arch" type="xml">
                <tree string="Job Positions" decoration-success="state=='published'" 
                      decoration-muted="state=='closed'" decoration-info="state=='draft'">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="department_id"/>
                    <field name="employment_type"/>
                    <field name="location"/>
                    <field name="required_experience_years"/>
                    <field name="required_education_level"/>
                    <field name="resume_analysis_count"/>
                    <field name="average_score" widget="progressbar"/>
                    <field name="state" widget="badge" 
                           decoration-success="state=='published'" 
                           decoration-info="state=='draft'"
                           decoration-muted="state=='closed'"/>
                    <field name="active" invisible="1"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>
        
        <!-- Job Position Search View -->
        <record id="view_hr_job_position_search" model="ir.ui.view">
            <field name="name">hr.job.position.search</field>
            <field name="model">hr.job.position</field>
            <field name="arch" type="xml">
                <search string="Job Positions">
                    <field name="name" string="Job Title"/>
                    <field name="code" string="Job Code"/>
                    <field name="department_id" string="Department"/>
                    <field name="required_skills" string="Required Skills"/>
                    <field name="keywords" string="Keywords"/>
                    
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                    
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Published" name="published" domain="[('state', '=', 'published')]"/>
                    <filter string="Closed" name="closed" domain="[('state', '=', 'closed')]"/>
                    
                    <separator/>
                    <filter string="Full Time" name="full_time" domain="[('employment_type', '=', 'full_time')]"/>
                    <filter string="Part Time" name="part_time" domain="[('employment_type', '=', 'part_time')]"/>
                    <filter string="Contract" name="contract" domain="[('employment_type', '=', 'contract')]"/>
                    <filter string="Remote Work" name="remote_work" domain="[('remote_work', '=', True)]"/>
                    
                    <separator/>
                    <filter string="Entry Level (0-2 years)" name="entry_level" domain="[('required_experience_years', '<=', 2)]"/>
                    <filter string="Mid Level (3-5 years)" name="mid_level" domain="[('required_experience_years', '>', 2), ('required_experience_years', '<=', 5)]"/>
                    <filter string="Senior Level (5+ years)" name="senior_level" domain="[('required_experience_years', '>', 5)]"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Department" name="group_department" context="{'group_by': 'department_id'}"/>
                        <filter string="Employment Type" name="group_employment_type" context="{'group_by': 'employment_type'}"/>
                        <filter string="Education Level" name="group_education" context="{'group_by': 'required_education_level'}"/>
                        <filter string="Company" name="group_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Job Position Kanban View -->
        <record id="view_hr_job_position_kanban" model="ir.ui.view">
            <field name="name">hr.job.position.kanban</field>
            <field name="model">hr.job.position</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="department_id"/>
                    <field name="employment_type"/>
                    <field name="location"/>
                    <field name="required_experience_years"/>
                    <field name="required_education_level"/>
                    <field name="resume_analysis_count"/>
                    <field name="average_score"/>
                    <field name="state"/>
                    <field name="remote_work"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                            <t t-if="record.code.raw_value">
                                                <span class="o_kanban_record_subtitle">
                                                    [<field name="code"/>]
                                                </span>
                                            </t>
                                        </div>
                                        <div class="o_kanban_record_top_right">
                                            <t t-if="record.resume_analysis_count.raw_value > 0">
                                                <span class="badge badge-pill badge-info">
                                                    <t t-esc="record.resume_analysis_count.raw_value"/> analyses
                                                </span>
                                            </t>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <t t-if="record.department_id.raw_value">
                                            <div class="o_kanban_record_subtitle">
                                                <i class="fa fa-building"/> <field name="department_id"/>
                                            </div>
                                        </t>
                                        <div class="o_kanban_record_subtitle">
                                            <i class="fa fa-clock-o"/> <field name="employment_type"/>
                                        </div>
                                        <t t-if="record.location.raw_value">
                                            <div class="o_kanban_record_subtitle">
                                                <i class="fa fa-map-marker"/> <field name="location"/>
                                                <t t-if="record.remote_work.raw_value">
                                                    <span class="badge badge-success ml-1">Remote</span>
                                                </t>
                                            </div>
                                        </t>
                                        <t t-if="record.required_experience_years.raw_value">
                                            <div class="o_kanban_record_subtitle">
                                                <i class="fa fa-graduation-cap"/> <t t-esc="record.required_experience_years.raw_value"/> years exp.
                                            </div>
                                        </t>
                                        <t t-if="record.average_score.raw_value > 0">
                                            <div class="o_kanban_record_subtitle">
                                                <i class="fa fa-bar-chart"/> Avg Score: <t t-esc="Math.round(record.average_score.raw_value)"/>%
                                            </div>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- Job Position Action -->
        <record id="action_hr_job_position" model="ir.actions.act_window">
            <field name="name">Job Positions</field>
            <field name="res_model">hr.job.position</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first job position!
                </p>
                <p>
                    Define job positions with detailed requirements, skills, and qualifications to enable accurate resume analysis and matching.
                </p>
            </field>
        </record>
    </data>
</odoo>