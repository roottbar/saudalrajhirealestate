<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_attendance_batch_form" model="ir.ui.view">
        <field name="name">hr.attendance.batch.form</field>
        <field name="model">hr.attendance.batch</field>
        <field name="arch" type="xml">
            <form string="Attendances Batches">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="check_in"/>
                        <field name="department_id"/>
                        <field name="state"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <notebook>
                        <page string="Attendances">
                            <field name="attendance_ids" context="{'default_check_in_date': check_in}">
                                <list string="Attendances" editable="bottom">
                                    <field name="check_in_date"/>
                                    <field name="employee_id"/>
                                    <field name="check_in"/>
                                    <field name="check_out"/>
                                    <field name="worked_hours" widget="float_time"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Confirm"
                            name="action_confirm"
                            type="object"
                            class="btn-primary"
                            modifiers='{"invisible":[("state","!=","draft")]}'/>
                    <button string="Done"
                            name="action_done"
                            type="object"
                            class="btn-primary"
                            modifiers='{"invisible":[("state","!=","confirm")]}'/>
                    <button string="Set to Draft"
                            name="action_draft"
                            type="object"
                            modifiers='{"invisible":[("state","=","draft")]}'/>
                    <button string="Cancel"
                            name="action_cancel"
                            type="object"
                            modifiers='{"invisible":[("state","=","cancel")]}'/>
                    <button string="Close"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_hr_attendance_batch_tree" model="ir.ui.view">
        <field name="name">hr.attendance.batch.list</field>
        <field name="model">hr.attendance.batch</field>
        <field name="arch" type="xml">
            <list string="Attendances Batches" sample="1">
                <field name="name"/>
                <field name="check_in"/>
                <field name="department_id"/>
                <field name="state"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <record id="view_hr_attendance_batch_search" model="ir.ui.view">
        <field name="name">hr.attendance.batch.search</field>
        <field name="model">hr.attendance.batch</field>
        <field name="arch" type="xml">
            <search string="Attendances Batches">
                <field name="name"/>
                <field name="check_in"/>
                <field name="department_id"/>
                <field name="state"/>
                <filter name="filter_confirmed" string="Confirmed" domain="[('state','=','confirm')]"/>
                <filter name="filter_done" string="Done" domain="[('state','=','done')]"/>
                <filter name="filter_cancel" string="Cancelled" domain="[('state','=','cancel')]"/>
                <group expand="0" string="Group By...">
                    <filter name="group_department" string="Department" context="{'group_by':'department_id'}"/>
                    <filter name="group_state" string="Status" context="{'group_by':'state'}"/>
                    <filter name="group_check_in" string="Check In Date" context="{'group_by':'check_in'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_hr_attendance_batch" model="ir.actions.act_window">
        <field name="name">Attendances Batches</field>
        <field name="res_model">hr.attendance.batch</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_hr_attendance_batch_root"
              name="Attendance Batches"
              parent="hr_attendance.menu_hr_attendance_root"/>

    <menuitem id="menu_hr_attendance_batch"
              name="Batches"
              parent="menu_hr_attendance_batch_root"
              action="action_hr_attendance_batch"/>
</odoo>
