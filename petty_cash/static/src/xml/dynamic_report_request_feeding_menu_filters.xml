                <a role="menuitem" class="dropdown-item js_dynamic_report_state" title="Review"
                   data-filter="review">Review
                </a>
                <a role="menuitem" class="dropdown-item js_dynamic_report_state" title="Rejected"
                   data-filter="rejected">Rejected
                </a>
                <a role="menuitem" class="dropdown-item js_dynamic_report_state" title="Draft"
                   data-filter="draft">Draft
                </a>
            </div>
        </div>
    </t>
