    <t t-name="PettyCash.dynamic_report_request_feeding_state_filter_menu">
        <div class="btn-group o_dropdown">
            <a type="button" class="dropdown-toggle js_dynamic_reports_state_filter" data-toggle="dropdown"
               aria-expanded="false">
                <span class="fa fa-filter"/>
            </a>
            <div class="dropdown-menu o_filters_menu" role="menu" x-placement="bottom-start">
                <a role="menuitem" class="dropdown-item js_dynamic_report_state selected" title="All"
                   data-filter="all">All
                </a>
                <div role="separator" class="dropdown-divider"/>
                <a role="menuitem" class="dropdown-item js_dynamic_report_state" title="Approved"
                   data-filter="approved">Approved
