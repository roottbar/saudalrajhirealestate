<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_vendor_petty_cash_form" model="ir.ui.view">
            <field name="name">view.vendor.petty.cash.form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form string="Vendor Petty Cash">
                    <sheet>
                        <div class="o_button_box" name="button_box"/>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                invisible="('active', '=', True)"/>
                        <field name="image_1920" widget='image' class="o_avatar"
                               options='{"preview_image": "image_128"}'/>
                        <div class="o_title">
                            <field name="is_company" invisible="1"/>
                            <field name="commercial_partner_id" invisible="1"/>
                            <field name="active" invisible="1"/>
                            <field name="company_type" widget="radio"
                                   class="o_edit_only"
                                   options="{'horizontal': true}"/>
                            <h1>
                                <field name="name" default_focus="1" placeholder="Name" required="1"/>
                            </h1>
                            <div class="o_row">
                                <field name="parent_id"
                                       widget="res_partner_many2one"
                                       placeholder="Company"
                                       domain="[('is_company', '=', True)]"
                                       context="{'default_is_company': True, 'show_vat': True}"
                                       invisible="'|', '&amp;', ('is_company','=', True),('parent_id', '=', False),('company_name', '!=', False),('company_name', '!=', '')"/>
                                <field name="company_name"
                                       invisible="'|', '|', ('company_name', '=', False), ('company_name', '=', ''), ('is_company', '=', True)"/>
                                <button name="create_company" type="object" class="o_edit_only btn-link"
                                        invisible="'|', '|', ('is_company','=', True), ('company_name', '=', ''), ('company_name', '=', False)">
                                    <span class="fa fa-plus-square"/>
                                    Create company
                                </button>
                            </div>
                        </div>

                        <group>
                            <group>
                                <field name="type" invisible="1"/>
                                <field name="property_account_receivable_id" invisible="1"/>
                                <field name="property_account_payable_id" invisible="1"/>
                                <span class="o_form_label o_td_label" name="address_name">
                                    <b>Company Address</b>
                                </span>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"
                                           readonly="('type', '=', 'contact'),('parent_id', '!=', False)"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"
                                           readonly="('type', '=', 'contact'),('parent_id', '!=', False)"/>
                                    <field name="city" placeholder="City" class="o_address_city"
                                           readonly="('type', '=', 'contact'),('parent_id', '!=', False)"/>
                                    <field name="state_id" class="o_address_state" placeholder="State"
                                           options='{"no_open": True}'
                                           readonly="('type', '=', 'contact'),('parent_id', '!=', False)"
                                           context="{'country_id': country_id, 'zip': zip}"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"
                                           readonly="('type', '=', 'contact'),('parent_id', '!=', False)"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country"
                                           options='{"no_open": True, "no_create": True}'
                                           readonly="('type', '=', 'contact'),('parent_id', '!=', False)"/>
                                </div>
                                <field name="vat" placeholder="e.g. BE0477472701"
                                       readonly="('parent_id','!=',False)"/>
                                <field name="partner_account_category_id" required="1"
                                       domain="[('apply_to_petty_cash', '=', True)]"
                                       options="{'no_open':True,'no_create':True}"/>
                            </group>

                            <group>
                                <field name="function" placeholder="e.g. Sales Director"
                                       invisible="('is_company','=', True)"/>
                                <field name="phone" widget="phone"/>
                                <field name="mobile" widget="phone"/>
                                <field name="user_ids" invisible="1"/>
                                <field name="email" widget="email" context="{'gravatar_image': True}"
                                       required="('user_ids','!=', ["/>
                                <field name="website" widget="url" placeholder="e.g. https://www.odoo.com"/>
                                <field name="title" options='{"no_open": True}' placeholder="e.g. Mister"
                                       invisible="('is_company', '=', True)"/>
                                <field name="active_lang_count" invisible="1"/>
                                <label for="lang" invisible="('active_lang_count', '&lt;=', 1)"/>
                                <div class="o_row" invisible="('active_lang_count', '&lt;=', 1)">
                                    <field name="lang"/>
                                    <button
                                            type="action"
                                            name="%(base.res_lang_act_window)d"
                                            class="btn-sm btn-link mb4 fa fa-globe"
                                            aria-label="More languages"
                                            groups="base.group_system"
                                            title="More languages"
                                    />
                                </div>
                                <field name="category_id" widget="many2many_tags"
                                       options="{'color_field': 'color', 'no_create_edit': True}"
                                       placeholder="Tags..."/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
