<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_petty_cash_request_tree" model="ir.ui.view">
            <field name="name">view.petty.cash.request.tree</field>
            <field name="model">petty.cash.request</field>
            <field name="arch" type="xml">
                <list>
                    <field name="date"/>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="manager_id"/>
                    <field name="amount"/>
                    <field name="actual_amount"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="view_petty_cash_request_form" model="ir.ui.view">
            <field name="name">view.petty.cash.request.form</field>
            <field name="model">petty.cash.request</field>
            <field name="arch" type="xml">
                <form string="Petty Cash Request">

                    <header>
                        <field name="allow_pm_approve" invisible="1"/>
                        <field name="payment_voucher_id" invisible="1"/>
                        <field name="petty_cash_id" invisible="1"/>
                        <field name="show_button" invisible="1"/>

                        <button name="action_send" type="object"  string="Send" class="btn-primary"/>
                        <button name="action_project_manager_approve" type="object" string="PM Approved"
                                class="btn-primary"
                                invisible="'|',('state','!=','in progress'),('allow_pm_approve','=',False)"/>

                        <button name="action_gm_approve" type="object"  
                                string="GM Approved" class="btn-primary" groups="petty_cash.group_petty_cash_manager,petty_cash.group_petty_general_m_approved"
                        />


                        <button name="%(action_approved_petty_cash_request)d" type="action" string="FM Approved"
                                class="btn-primary" />

                        <button name="%(action_cancel_petty_cash_request)d" type="action" 
                                string="Cancel" class="btn-primary" groups="petty_cash.group_petty_cash_manager"/>
                        <button name="create_payment_voucher" type="object" string="Payment Voucher"
                                class="btn-primary"
                                invisible="'|','|','|',('show_button','=',False),('payment_voucher_id', '!=', False),('petty_cash_id', '!=', False),('state', '!=', 'f_m_approved')"/>
                        <button name="assign_petty_cash" type="object" string="Petty Cash" class="btn-primary"
                                invisible="'|','|','|',('show_button','=',False),('payment_voucher_id', '!=', False),('petty_cash_id', '!=', False),('state', '!=', 'f_m_approved')"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,send,in progress,p_m_approved,gm_approved,f_m_approved,cancel"/>
                    </header>
                    <sheet>
                        <div class="o_button_box">
                            <button name="open_payment_voucher" class="o_stat_button" icon="fa-bars" type="object"
                                    string="Payment Voucher"
                                    invisible="('payment_voucher_id', '=', False)"/>
                            <button name="open_petty_cash" class="o_stat_button" icon="fa-money" type="object"
                                    string="Petty Cash" invisible="('petty_cash_id', '=', False)"/>
                        </div>
                        <div class="o_title" invisible="('state', '=', 'draft')">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="amount" readonly="('state', '!=', 'draft')"/>
                                <field name="currency_id" options="{'no_open':True,'no_create':True}"
                                       groups="petty_cash.group_petty_cash_multi_currency"
                                       readonly="('state', '!=', 'draft')"/>
                                <field name="partner_id" options="{'no_open':True,'no_create':True}"
                                       readonly="('state', '!=', 'draft')"/>
                            </group>
                            <group>
                                <field name="date" readonly="('state', '!=', 'draft')"/>
                                <field name="manager_id" options="{'no_open':True,'no_create':True}"
                                       readonly="('state', '!=', 'draft')"/>
                                <field name="project_id" options="{'no_open':True,'no_create':True}"
                                       readonly="('state', '!=', 'draft')"/>

                                <field name="journal_id" invisible="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="description" readonly="('state', '!=', 'draft')"/>
                        </group>
                        <group>
                            <field name="recommends" readonly="('state', '!=', 'draft')"/>
                        </group>
                        <group>
                            <field name="attachment" readonly="('state', '!=', 'draft')"/>
                        </group>
                    </sheet>
                    <div class="o_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_petty_cash_request" model="ir.actions.act_window">
            <field name="name">Requests</field>
            <field name="res_model">petty.cash.request</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="action_petty_cash_requests_in_progress" model="ir.actions.act_window">
            <field name="name">Requests In Progress</field>
            <field name="res_model">petty.cash.request</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('state','=','in progress')]</field>
        </record>
    </data>
</odoo>
