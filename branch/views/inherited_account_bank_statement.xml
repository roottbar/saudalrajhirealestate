<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- تعديل الـ view الموروث بدلاً من إنشاء form جديد -->
        <record id="view_bank_statement_form_inherit_branch" model="ir.ui.view">
            <field name="name">view.bank.statement.form.inherit.branch</field>
            <field name="model">account.bank.statement</field>
            <!-- استبدل هذا بالـ external id الصحيح لعرض كشف البنك في Odoo 18 -->
            <field name="inherit_id" ref="account_accountant.view_bank_statement_form"/>
            <field name="arch" type="xml">

                <!-- إضافة branch_id فوق التاريخ -->
                <field name="date" position="before">
                    <field name="branch_id"/>
                </field>

                <!-- إدراج branch_id بعد partner_id في الـ tree -->
                <xpath expr="//field[@name='line_ids']/tree/field[@name='partner_id']" position="after">
                    <field name="branch_id"/>
                </xpath>

                <!-- إضافة سياق branch_id في line_ids -->
                <xpath expr="//field[@name='line_ids']" position="attributes">
                    <attribute name="context">{'branch_id' : branch_id}</attribute>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
