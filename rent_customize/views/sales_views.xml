<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- تعديل Badge Status -->
        <record id="rental_order_form_view2" model="ir.ui.view">
            <field name="name">sale.order.badge_status</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_renting.rental_order_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='badge-pill badge-info float-right']" position="replace">
                    <div class="badge-pill badge-info float-right"
                         attrs="{'invisible': ['|', ('state', 'not in', ['sale', 'done']),'|', ('rental_status', '!=', 'sent'), ('has_late_lines', '=', True)]}">
                        Confirmed
                    </div>
                </xpath>
                <xpath expr="//div[@class='badge-pill badge-warning float-right']" position="replace">
                    <div class="badge-pill badge-warning float-right"
                         attrs="{'invisible': ['|','|', ('state', 'not in', ['done', 'occupied']), ('rental_status', '!=', 'pickup'), ('has_late_lines', '=', True)]}">
                        Picked-up
                    </div>
                </xpath>
                <xpath expr="//div[@class='badge-pill badge-success float-right']" position="replace">
                    <div class="badge-pill badge-success float-right"
                         attrs="{'invisible': ['|', ('state', 'not in', ['cancel','termination']), ('rental_status', '!=', 'returned')]}">
                        Returned
                    </div>
                </xpath>
            </field>
        </record>

        <!-- Transfer Form -->
        <record id="transfer_view_form" model="ir.ui.view">
            <field name="name">sale.order.transfer_form</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <form string="Transfer Apartment">
                    <sheet>
                        <group>
                            <field name="transfer_customer_id"/>
                            <field name="transfer_date"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="do_transfer" type="object" string="Transfer" class="oe_highlight"/>
                        <button name="do_transfer_and_print" type="object" string="Transfer and Print" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Hidden Fields for Transfer Buttons -->
        <record id="rent_view_order_form" model="ir.ui.view">
            <field name="name">sale.order.transfer_buttons</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_button_box']" position="inside">
                    <field name="new_rental_id" invisible="1"/>
                    <button class="oe_stat_button" attrs="{'invisible':[('new_rental_id', '=', False)]}"
                            name="action_view_transfer" type="object" icon="fa-building-o">
                        New Rental
                    </button>
                </xpath>
            </field>
        </record>

        <!-- Refund Insurance Form -->
        <record id="refund_insurance_view_form" model="ir.ui.view">
            <field name="name">refund_insurance_view_form</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <form string="Refund Insurance">
                    <sheet>
                        <group>
                            <field name="apartment_insurance" invisible="1"/>
                            <field name="partner_id" invisible="1"/>
                            <field name="partner_invoice_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="state" invisible="1"/>
                            <field name="damage_amount"/>
                            <field name="refund_amount" invisible="1"/>
                            <field name="context_order" invisible="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="refund" type="object" string="Refund" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
