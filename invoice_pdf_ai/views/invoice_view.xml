<odoo>
    <record id="view_invoice_form_ext" model="ir.ui.view">
        <field name="name">account.move.form.ext</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/.." position="before">
                <field name="invoice_months_count" widget="integer"/>
                <field name="renting_attachment_ids" widget="many2many_binary"/>
                <button name="action_process_invoice_months" 
                        string="Process Invoice Months" 
                        type="object" 
                        class="oe_highlight"/>
            </xpath>
        </field>
    </record>

    <record id="view_pdf_processor_form" model="ir.ui.view">
        <field name="name">pdf.ai.processor.form</field>
        <field name="model">pdf.ai.processor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="pdf_file" filename="filename"/>
                        <field name="filename" invisible="1"/>
                    </group>
                    <group>
                        <field name="invoice_months_count" 
                               string="Detected Invoice Months" 
                               readonly="1"/>
                    </group>
                    <footer>
                        <button name="action_process_pdf" 
                                string="Extract Months Count" 
                                type="object" 
                                class="btn-primary"/>
                        <button string="Close" 
                                special="cancel" 
                                class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
