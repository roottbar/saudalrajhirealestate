<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Kanban view -->
    <record id="view_project_kanban" model="ir.ui.view">
        <field name="name">project.project.view.kanban.inherit.project.progress.bar</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_kanban"/>
        <field name="priority">24</field>
        <field name="arch" type="xml">
            <field name="tag_ids" position="after">
                <field name="is_progress_bar"/>
                <field name="progressbar" widget="progressbar"/>
            </field>
        </field>
    </record>

    <!-- Form view -->
    <record id="edit_project" model="ir.ui.view">
        <field name="name">project.project.view.form.inherit.project.progress.bar</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <field name="tag_ids" position="after">
                <field name="is_progress_bar"/>
                <field name="progressbar" widget="progressbar" class="d-flex align-items-center ps-0 ps-lg-5"/>
            </field>
        </field>
    </record>

    <!-- Tree view -->
    <record id="view_project" model="ir.ui.view">
        <field name="name">project.project.view.tree.inherit.project.progress.bar</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="is_progress_bar"/>
                <field name="progressbar" widget="progressbar" class="d-flex align-items-center ps-0 ps-lg-5"/>
            </field>
        </field>
    </record>
</odoo>
