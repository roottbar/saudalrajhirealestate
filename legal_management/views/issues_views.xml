<?xml version="1.0" encoding="utf-8"?>

<odoo>


    <record id="view_issues_tree" model="ir.ui.view">
        <field name="name">issues.tree</field>
        <field name="model">issues</field>
        <field name="arch" type="xml">
            <list>
                <field name='case_no'/>
                <field name='date_of_the_invitation'/>
                <field name="court"/>
                <field name="type_of_court"/>
                <field name='judge'/>
                <field name='prosecut'/>
                <field name="fee"/>
                <field name="state"/>
            </list>
        </field>
    </record>


    <record id="view_issues_form" model="ir.ui.view">
        <field name="name">issues.form</field>
        <field name="model">issues</field>
        <field name="arch" type="xml">
            <form>

                 <header>

                     <button name="action_invoice" string="Create Invoice" type="object" class="btn-primary"/>

                     <field name="state" widget="statusbar" nolabel="1" options="{'clickable':'1'}"
                           statusbar_visible="unforeseen,finished"/>
                </header>

                <sheet>
                    <widget name="web_ribbon" title="Close" bg_color="bg-danger"
                            invisible="('implement','=',False)"/>

                    <div class='o_button_box' name="button_box">
                    <button name="action_appeal" type="object" class="o_stat_button" icon="fa-bookmark-o">
                        <div class="o_stat_info">
                            <field name="appeal_count" class="o_stat_value"/>
                            <span class="o_stat_text">Appeals</span>
                        </div>
                    </button>
                        <button name="action_hearing" type="object" class="o_stat_button" icon="fa-list">
                            <div class="o_stat_info">
                                <field name="hearing_count" class="o_stat_value"/>
                                <span class="o_stat_text">Hearings</span>
                            </div>
                        </button>
                    </div>

                    <group>
                        <group>
                            <field name="implement" invisible="1"/>
                            <field name='case_no' readonly="('implement','=',True)"/>
                            <field name='date_of_the_invitation' readonly="('implement','=',True)"/>
                            <field name="court" readonly="('implement','=',True)"/>
                            <field name="type_of_court" readonly="('implement','=',True)"/>
                        </group>
                        <group>
                            <field name='judge' readonly="('implement','=',True)"/>
                            <field name='prosecut' readonly="('implement','=',True)"/>
                            <field name='defendant' readonly="('implement','=',True)"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="fee" widget="monetary"/>

                        </group>
                    </group>

                      <group string="Details of the verdict" name="details_verdict" >
                            <group>
                                <field name="verdict_no" readonly="('implement','=',True)"/>
                                <field name="date_of_verdict" readonly="('implement','=',True)"/>
                            </group>
                          <group>
                                <field name ='court_2' readonly="('implement','=',True)"/>
                                <field name="attachment_verdict" widget="many2many_binary" readonly="('implement','=',True)"/>
                            </group>
                          <group string="Transcript Of Verdict" name="transcript_verdict" readonly="('implement','=',True)"></group>
                        </group>
                    <field name="transcript_of_verdict" class="field_description" placeholder="Description of the verdict..." readonly="('implement','=',True)"/>
                </sheet>


<!--                <record id="demo_cron" model="ir.cron">-->
<!--                       <field name="name">Demo Cron Job</field>-->
<!--                       <field name="model_id" ref="model_cron_demo"/>-->
<!--                       <field name="state">code</field>-->
<!--                       <field name="code">model.creo_job()</field>-->
<!--                       <field name='interval_number'>1</field>-->
<!--                       <field name='interval_type'>days</field>-->
<!--                       <field name="numbercall">-1</field>-->
<!--                       <field name="doall" eval="False"/>-->

                <div class="o_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_issues" model="ir.actions.act_window">
        <field name="name">Issues</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">issues</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first issue !
            </p>
        </field>
    </record>

        <menuitem id="menu_issues"
              name="Issues"
              parent="legal_management.menu_legal_master_first"
              action="action_issues"
              sequence="1"/>
</odoo>
