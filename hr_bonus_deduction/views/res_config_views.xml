<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="view_bonus_deduction_settings_form" model="ir.ui.view">
            <field name="name">view.bonus.deduction.settings.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-string='Employees']" position="inside">
                    <h2>Deductions Settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="deduction_amount"/>
                                <div class="text-muted">
                                    Set default Deduction Amount
                                </div>

                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="deduction_amount" class="o_light_label"/>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <h2>Bonuses Settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="bonus_amount"/>
                                <div class="text-muted">
                                    Set default Bonus Amount
                                </div>

                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="bonus_amount" class="o_light_label"/>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>