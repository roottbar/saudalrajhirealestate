<odoo>
    <record id="view_order_form_inherit_product_filter" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.product.filter</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/form//field[@name='product_id']" position="attributes">
                <attribute name="domain">[('sale_visible', '=', True)]</attribute>
            </xpath>
        </field>
    </record>
</odoo>