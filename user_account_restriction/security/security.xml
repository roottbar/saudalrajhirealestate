<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Record Rule for Account Account - Hide Restricted Accounts -->
        <record id="account_account_user_restriction_rule" model="ir.rule">
            <field name="name">Account Account: User Restriction Rule</field>
            <field name="model_id" ref="account.model_account_account"/>
            <field name="domain_force">[('id', 'not in', [account_id for account_id in user.restricted_account_ids.ids])]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rule for Account Move Line - Hide lines with restricted accounts -->
        <record id="account_move_line_user_restriction_rule" model="ir.rule">
            <field name="name">Account Move Line: User Restriction Rule</field>
            <field name="model_id" ref="account.model_account_move_line"/>
            <field name="domain_force">[('account_id', 'not in', [account_id for account_id in user.restricted_account_ids.ids])]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rule for Account Move - Hide moves with restricted accounts -->
        <record id="account_move_user_restriction_rule" model="ir.rule">
            <field name="name">Account Move: User Restriction Rule</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="domain_force">['|', ('line_ids', '=', False), ('line_ids.account_id', 'not in', [account_id for account_id in user.restricted_account_ids.ids])]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>