[flake8]
max-line-length = 88
extend-ignore = E203, W503, E501
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    .coverage,
    htmlcov,
    .tox,
    venv,
    env,
    .venv,
    .env,
    build,
    dist,
    *.egg-info,
    migrations,
    node_modules
per-file-ignores =
    __init__.py:F401
    tests/*:B011
    */migrations/*:E501
max-complexity = 10
select = C,E,F,W,B,B950
import-order-style = google
application-import-names = odoo,saudalrajhirealestate
known-first-party = odoo,saudalrajhirealestate
known-third-party = requests,lxml,PIL,PyPDF2,xlsxwriter,qrcode,nltk,textstat,pyzk