<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_sherbiny_advanced_settings_purchase_form" model="ir.ui.view">
        <field name="name">view.sherbiny.advanced.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='purchase_setting_container']" position="after">
                <h2>Purchase Request</h2>
                <div class="row mt16 o_settings_container" name="">
                    <div class="col-12 col-lg-6 o_setting_box" id="purchase_max_weight">
                        <div class="o_setting_right_pane">
                            <label for="approval_it_id"/>
                            <div class="text-muted">
                                Approval IT
                            </div>
                            <div class="text-muted">
                                <field name="approval_it_id" options="{'no_create': True, 'no_open': True}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>