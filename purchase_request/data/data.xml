<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Purchase Requests -related subtypes for messaging / Chatter -->
        <record id="mt_purchase_request_reset_draft" model="mail.message.subtype">
            <field name="name">Reset to Draft</field>
            <field name="res_model">purchase.request</field>
            <field name="default" eval="True"/>
            <field name="description">Reset to Draft Purchase Request</field>
        </record>
        <record id="mt_purchase_request_to_be_approved" model="mail.message.subtype">
            <field name="name">To be Approved</field>
            <field name="res_model">purchase.request</field>
            <field name="default" eval="True"/>
            <field name="description">Purchase Request Ready to be Approved</field>
        </record>
        <record id="mt_purchase_request_approved" model="mail.message.subtype">
            <field name="name">Approved</field>
            <field name="res_model">purchase.request</field>
            <field name="default" eval="True"/>
            <field name="description">Purchase Request Approved</field>
        </record>
        <record id="mt_purchase_request_rejected" model="mail.message.subtype">
            <field name="name">Rejected</field>
            <field name="res_model">purchase.request</field>
            <field name="default" eval="True"/>
            <field name="description">Purchase Request Rejected</field>
        </record>

        <record id="mt_purchase_request_done" model="mail.message.subtype">
            <field name="name">Done</field>
            <field name="res_model">purchase.request</field>
            <field name="default" eval="True"/>
            <field name="description">Purchase Request Done</field>
        </record>
    </data>
</odoo>