<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- إضافة زر التعديل المباشر للفاتورة المؤكدة -->
        <record id="view_move_form_journal_edit" model="ir.ui.view">
            <field name="name">account.move.form.journal.edit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!-- إخفاء زر المسودة للمستخدمين المصرح لهم -->
                <xpath expr="//button[@name='button_draft']" position="attributes">
                    <attribute name="attrs">{'invisible': [('state', '=', 'posted'), ('user_has_journal_edit_group', '=', True)]}</attribute>
                </xpath>
                
                <!-- إضافة حقل وظيفي للتحقق من الصلاحية -->
                <xpath expr="//field[@name='state']" position="after">
                    <field name="user_has_journal_edit_group" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>