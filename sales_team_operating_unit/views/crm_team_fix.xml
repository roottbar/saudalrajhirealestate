<?xml version="1.0" encoding="utf-8"?>
<!-- Fix for Odoo 18 member_company_ids issue -->
<odoo>
    <record id="crm_team_view_form_fix" model="ir.ui.view">
        <field name="name">crm.team.form.fix</field>
        <field name="model">crm.team</field>
        <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
        <field name="arch" type="xml">
            <!-- Fix the member_ids field domain for Odoo 18 -->
            <field name="member_ids" position="attributes">
                <attribute name="domain">['&amp;', ('share', '=', False), ('company_ids', 'in', company_ids)]</attribute>
            </field>
        </field>
    </record>
</odoo>