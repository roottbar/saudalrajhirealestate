<?xml version="1.0" encoding="utf-8"?>
<!-- Override for Odoo 18 member_company_ids issue -->
<odoo>
    <record id="crm_team_view_form_override" model="ir.ui.view">
        <field name="name">crm.team.form.override</field>
        <field name="model">crm.team</field>
        <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <!-- Override the entire member_ids field to fix domain -->
            <field name="member_ids" position="replace">
                <field name="member_ids" mode="kanban" class="w-100"
                       domain="[('share', '=', False), ('company_ids', 'in', [company_id])]">
                    <kanban>
                        <templates>
                            <t t-name="kanban-box">
                                <div class="oe_kanban_global_click">
                                    <div class="o_kanban_record_top mb16">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                        <img t-att-src="kanban_image('res.users', 'avatar_128', record.id.raw_value)"
                                             t-att-title="record.name.value" t-att-alt="record.name.value"
                                             class="oe_kanban_avatar float-right"/>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="email" widget="email"/>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </templates>
                    </kanban>
                </field>
            </field>
        </field>
    </record>
</odoo>