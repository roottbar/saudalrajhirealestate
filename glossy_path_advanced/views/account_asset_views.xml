<odoo>
    <record model="ir.ui.view" id="view_account_asset_inherit_filter">
        <field name="name">view.account.asset.inherit.filte</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_search"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="plate_no"/>
                <field name="chaises_no"/>
                <field name="location"/>
                <field name="project_code"/>
                <field name="employee_id"/>
            </field>

        </field>
    </record>
    <!-- Removed assets list view inheritance due to missing XML ID in Odoo 18
         (account_asset.view_account_asset_purchase_tree). Will re-add once the
         correct base list view is confirmed. -->
    <record id="view_account_asset_inherit_form" model="ir.ui.view">
        <field name="name">account.asset.form</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[1]" position="before">
                <group string="Info" invisible="('asset_type', '!=', 'purchase')">
                    <group>
                        <field name="plate_no" readonly="('state', 'not in', ('draft', 'model'))"/>
                        <field name="chaises_no" readonly="('state', 'not in', ('draft', 'model'))"/>
                        <field name="location" readonly="('state', 'not in', ('draft', 'model'))"/>
                    </group>
                    <group>
                        <field name="project_code" readonly="('state', 'not in', ('draft', 'model'))"/>
                        <field name="employee_id" options="{'no_open':True,'no_create': True}"
                               readonly="('state', 'not in', ('draft', 'model'))"/>
                    </group>

                </group>

            </xpath>
        </field>
    </record>
    <record model="ir.actions.act_window" id="account_asset.action_account_expense_form">
        <field name="name">Prepaid Expenses </field>
    </record>
    <record model="ir.ui.menu" id="account_asset.menu_action_account_expense_recognition">
        <field name='name'>Prepaid Expenses</field>
    </record>
</odoo>
