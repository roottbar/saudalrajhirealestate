<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- الحساب الأب (تجميعي) -->
        <record id="account_parent_assets" model="account.account">
            <field name="name">Assets</field>
            <field name="code">1000</field>
            <field name="account_type">view</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="reconcile" eval="False"/>
        </record>

        <!-- حساب فرعي - نقدية -->
        <record id="account_cash" model="account.account">
            <field name="name">Cash</field>
            <field name="code">1010</field>
            <field name="account_type">asset_cash</field>
            <field name="parent_id" ref="account_parent_assets"/>
            <field name="company_id" ref="base.main_company"/>
        </record>

        <!-- حساب فرعي - ذمم مدينة -->
        <record id="account_receivable" model="account.account">
            <field name="name">Accounts Receivable</field>
            <field name="code">1020</field>
            <field name="account_type">asset_receivable</field>
            <field name="parent_id" ref="account_parent_assets"/>
            <field name="company_id" ref="base.main_company"/>
            <field name="reconcile" eval="True"/>
        </record>

    </data>
</odoo>
