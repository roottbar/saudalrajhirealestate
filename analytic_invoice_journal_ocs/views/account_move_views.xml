<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- إضافة الحقل التحليلي للمنتج -->
    <record id="view_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit.analytic</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='taxes_id']" position="before">
                <field name="analytic_account_id"/>
            </xpath>
        </field>
    </record>

    <!-- تحسين عرض الحساب التحليلي في بنود الفاتورة -->
    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit.analytic</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="after">
                <field name="analytic_account_id"/>
            </xpath>
        </field>
    </record>
</odoo>