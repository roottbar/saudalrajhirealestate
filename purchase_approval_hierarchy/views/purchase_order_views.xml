<odoo>
    <record id="view_purchase_order_form_inherit_approval" model="ir.ui.view">
        <field name="name">purchase.order.form.approval.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="approval_state" readonly="1"/>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="action_approve_1" type="object" string="موافقة أولى" 
                    attrs="['|', ('approval_state', '=', 'draft'), ('approval_state', '=', 'draft'), ('invisible', 'not user.has_group('purchase_approval_hierarchy.group_purchase_approval_1') or approval_state != 'draft'')]"
                    class="btn-primary"/>
                <button name="action_approve_2" type="object" string="موافقة ثانية" 
                    attrs="['invisible', 'not user.has_group('purchase_approval_hierarchy.group_purchase_approval_2') or approval_state != 'approval_1'']"
                    class="btn-primary"/>
                <button name="action_approve_3" type="object" string="موافقة ثالثة" 
                    attrs="['invisible', 'not user.has_group('purchase_approval_hierarchy.group_purchase_approval_3') or approval_state != 'approval_2'']"
                    class="btn-primary"/>
                <button name="action_final_approve" type="object" string="اعتماد نهائي" 
                    attrs="['invisible', 'approval_state != 'approval_3'']"
                    class="btn-success"/>
            </xpath>
        </field>
    </record>
</odoo>