<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="rental_ai_insights_wizard_form" model="ir.ui.view">
            <field name="name">rental.ai.insights.wizard.form</field>
            <field name="model">rental.ai.insights.wizard</field>
            <field name="arch" type="xml">
                <form string="تحليلات الذكاء الاصطناعي للإيجار">
                    <header>
                        <button name="action_compute" type="object" string="تحليل" class="btn-primary"/>
                    </header>
                    <sheet>
                        <group string="معايير التحليل">
                            <group>
                                <field name="company_id"/>
                                <field name="branch_id"/>
                                <field name="property_id"/>
                                <field name="analytic_account_id"/>
                                <field name="partner_id"/>
                            </group>
                            <group>
                                <field name="contract_number"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="ملخص">
                                <group>
                                    <field name="invoices_total" readonly="1"/>
                                    <field name="invoices_paid" readonly="1"/>
                                    <field name="invoices_due" readonly="1"/>
                                </group>
                                <group>
                                    <field name="revenues_amount" readonly="1"/>
                                    <field name="expenses_amount" readonly="1"/>
                                    <field name="amount_paid" readonly="1"/>
                                    <field name="amount_due" readonly="1"/>
                                </group>
                                <field name="summary_html" nolabel="1" readonly="1"/>
                            </page>
                            <page string="مقارنة سنوية">
                                <field name="yearly_html" nolabel="1" readonly="1"/>
                            </page>
                            <page string="توقعات AI">
                                <field name="predictions_html" nolabel="1" readonly="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="rental_ai_insights_wizard_action" model="ir.actions.act_window">
            <field name="name">تحليلات الذكاء الاصطناعي</field>
            <field name="res_model">rental.ai.insights.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
        </record>
    </data>
</odoo>