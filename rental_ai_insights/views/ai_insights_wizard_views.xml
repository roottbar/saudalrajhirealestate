<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Wizard Form View -->
        <record id="rental_ai_insights_wizard_view" model="ir.ui.view">
            <field name="name">rental.ai.insights.wizard.form</field>
            <field name="model">rental.ai.insights.wizard</field>
            <field name="arch" type="xml">
                <form string="تحليلات الإيجارات بالذكاء الاصطناعي">
                    <group>
                        <group>
                            <field name="company_ids" widget="many2many_tags"/>
                            <field name="operating_unit_id"/>
                            <field name="property_build_id"/>
                            <field name="property_id"/>
                            <field name="product_id"/>
                        </group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="analysis_granularity"/>
                            <field name="compare_years"/>
                            <field name="include_invoice_analysis"/>
                            <field name="include_predictions"/>
                            <field name="report_type"/>
                        </group>
                    </group>
                    <footer>
                        <button string="تشغيل التحليل" type="object" name="action_generate_report" class="btn-primary"/>
                        <button string="إلغاء" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="rental_ai_insights_wizard_action" model="ir.actions.act_window">
            <field name="name">تحليلات الإيجارات بالذكاء الاصطناعي</field>
            <field name="res_model">rental.ai.insights.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="rental_ai_insights_wizard_view"/>
        </record>

        <!-- Menu under Renting Reports -->
        <menuitem id="menu_rental_ai_insights" name="تحليلات الإيجارات بالذكاء الاصطناعي"
                  parent="sale_renting.menu_rental_reporting"
                  action="rental_ai_insights_wizard_action" sequence="25"/>
    </data>
</odoo>