<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Guard against missing company_registry in base document layout preview -->
        <template id="inherit_web_report_invoice_wizard_preview" inherit_id="web.report_invoice_wizard_preview">
            <!-- Replace direct access to company.company_registry with a guarded version -->
            <xpath expr="//*[@t-field='company.company_registry']" position="replace">
                <t t-if="'company_registry' in company._fields">
                    <span t-esc="company.company_registry"/>
                </t>
            </xpath>
        </template>
    </data>
</odoo>