<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Rule: Property from allowed operating units -->
    <record id="ir_rule_renting_allowed_operating_units" model="ir.rule">
        <field name="name">Property from allowed operating units</field>
        <field name="model_id" ref="renting.model_rent_property"/>
        <field name="domain_force">
            ['|',('property_address_area','=',False),('property_address_area','in',user.operating_unit_ids.ids)]
        </field>
        <field name="global" eval="True"/>
        <field eval="0" name="perm_unlink"/>
        <field eval="0" name="perm_write"/>
        <field eval="1" name="perm_read"/>
        <field eval="0" name="perm_create"/>
    </record>

    <!-- Rule: Sales Order lines from allowed operating units -->
    <record id="ir_rule_sale_order_line_allowed_operating_units" model="ir.rule">
        <field name="name">Sales Order lines from allowed operating units</field>
        <field name="model_id" ref="sale.model_sale_order_line"/>
        <field name="domain_force">
            ['|',('operating_unit_id','=',False),('operating_unit_id','in',user.operating_unit_ids.ids)]
        </field>
        <field name="global" eval="True"/>
        <field eval="0" name="perm_unlink"/>
        <field eval="0" name="perm_write"/>
        <field eval="1" name="perm_read"/>
        <field eval="0" name="perm_create"/>
    </record>

    <!-- Note: Sale Report rule removed because sale.report is a SQL view and cannot have ir.rule -->

</odoo>
