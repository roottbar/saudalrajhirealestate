<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record model="ir.ui.view" id="rent_unit_maintenance_tree">
            <field name="name">rent.unit.maintenance.tree</field>
            <field name="model">rent.unit.maintenance</field>
            <field name="arch" type="xml">
                <list string="Unit Maintenance">
                    <field name="unit_maintenance_description"/>
                    <field name="unit_maintenance_date"/>
                    <field name="unit_rent_config_unit_maintenance_type_id"/>
                    <field name="unit_rent_config_unit_maintenance_status_id"/>
                    <field name="unit_maintenance_value"/>
                </list>
            </field>
        </record>
        <record model="ir.ui.view" id="rent_unit_maintenance_form">
            <field name="name">rent.unit.maintenance.form</field>
            <field name="model">rent.unit.maintenance</field>
            <field name="arch" type="xml">
                <form string="Unit Maintenance">
                    <sheet>
                        <group>
                            <group>
                                <field name="unit_maintenance_description"/>
                                <field name="unit_rent_config_unit_maintenance_type_id"/>
                                <field name="unit_rent_config_unit_maintenance_status_id"/>
                            </group>
                            <group>
                                <field name="unit_maintenance_date"/>
                                <field name="unit_maintenance_value"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
