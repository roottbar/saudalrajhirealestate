<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record model="ir.ui.view" id="rent_config_unit_types_tree">
            <field name="name">rent.config.unit.types.tree</field>
            <field name="model">rent.config.unit.types</field>
            <field name="arch" type="xml">
                <tree string="Unit Types">
                    <field name="unit_type_name"/>
                    <field name="unit_type_description"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="rent_config_unit_types_form">
            <field name="name">rent.config.unit.types.form</field>
            <field name="model">rent.config.unit.types</field>
            <field name="arch" type="xml">
                <form string="Unit Types">
                    <sheet>
                        <group>
                            <group>
                                <field name="unit_type_name"/>
                            </group>
                            <group>
                                <field name="unit_type_description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>