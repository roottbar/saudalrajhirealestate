<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- تعريف التقرير -->
        <record id="rent_units_report" model="ir.actions.report">
            <field name="name">تقرير الوحدات المؤجرة</field>
            <field name="model">rent.units.report.wizard</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">renting.rent_units_report_template</field>
            <field name="report_file">renting.rent_units_report_template</field>
            <field name="binding_model_id" ref="model_rent_units_report_wizard"/>
            <field name="binding_type">report</field>
        </record>

        <!-- قالب التقرير -->
        <template id="rent_units_report_template">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        
                        <!-- عنوان التقرير -->
                        <div class="row">
                            <div class="col-12 text-center">
                                <h2>تقرير الوحدات المؤجرة</h2>
                                <p t-if="o.date_from or o.date_to">
                                    <span t-if="o.date_from">من: <span t-field="o.date_from"/></span>
                                    <span t-if="o.date_to"> إلى: <span t-field="o.date_to"/></span>
                                </p>
                            </div>
                        </div>

                        <!-- معلومات الفلاتر -->
                        <div class="row mt-3">
                            <div class="col-12">
                                <table class="table table-sm">
                                    <tr t-if="o.company_id">
                                        <td><strong>الشركة:</strong></td>
                                        <td><span t-field="o.company_id.name"/></td>
                                    </tr>
                                    <tr t-if="o.operating_unit_id">
                                        <td><strong>الفرع:</strong></td>
                                        <td><span t-field="o.operating_unit_id.name"/></td>
                                    </tr>
                                    <tr t-if="o.property_build_id">
                                        <td><strong>المجمع:</strong></td>
                                        <td><span t-field="o.property_build_id.name"/></td>
                                    </tr>
                                    <tr t-if="o.property_id">
                                        <td><strong>العقار:</strong></td>
                                        <td><span t-field="o.property_id.property_name"/></td>
                                    </tr>
                                    <tr t-if="o.product_id">
                                        <td><strong>الوحدة:</strong></td>
                                        <td><span t-field="o.product_id.name"/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!-- جدول البيانات -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <table class="table table-bordered table-sm">
                                    <thead class="thead-light">
                                        <tr>
                                            <th>الشركة</th>
                                            <th>الفرع</th>
                                            <th>المجمع</th>
                                            <th>العقار</th>
                                            <th>الحساب التحليلي</th>
                                            <th>الوحدة</th>
                                            <th>اسم العميل</th>
                                            <th>رقم العقد</th>
                                            <th>حالة الوحدة</th>
                                            <th>المبلغ المدفوع</th>
                                            <th>المبلغ المستحق</th>
                                            <th>المصروفات</th>
                                            <th>الإيرادات</th>
                                            <th>تاريخ الاستلام</th>
                                            <th>تاريخ التسليم</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="docs" t-as="line">
                                            <tr>
                                                <td><span t-esc="line.get('company_name', '')"/></td>
                                                <td><span t-esc="line.get('operating_unit', '')"/></td>
                                                <td><span t-esc="line.get('property_build', '')"/></td>
                                                <td><span t-esc="line.get('property_name', '')"/></td>
                                                <td><span t-esc="line.get('analytic_account', '')"/></td>
                                                <td><span t-esc="line.get('unit_name', '')"/></td>
                                                <td><span t-esc="line.get('customer_name', '')"/></td>
                                                <td><span t-esc="line.get('contract_number', '')"/></td>
                                                <td><span t-esc="line.get('unit_state', '')"/></td>
                                                <td><span t-esc="'{:,.2f}'.format(line.get('amount_paid', 0))"/></td>
                                                <td><span t-esc="'{:,.2f}'.format(line.get('amount_due', 0))"/></td>
                                                <td><span t-esc="'{:,.2f}'.format(line.get('unit_expenses', 0))"/></td>
                                                <td><span t-esc="'{:,.2f}'.format(line.get('unit_revenues', 0))"/></td>
                                                <td><span t-esc="line.get('from_date', '')"/></td>
                                                <td><span t-esc="line.get('to_date', '')"/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="oe_structure"/>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
