<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Guard company_registry usage in the standard external layout -->
    <template id="external_layout_standard_company_registry_guard" inherit_id="web.external_layout_standard" priority="1000">
        <xpath expr="//span[@t-field='company.company_registry']" position="attributes">
            <attribute name="t-if">company._fields.get('company_registry') and company.company_registry</attribute>
        </xpath>
    </template>

    <!-- Guard company_registry usage in the boxed external layout as well -->
    <template id="external_layout_boxed_company_registry_guard" inherit_id="web.external_layout_boxed" priority="1000">
        <xpath expr="//span[@t-field='company.company_registry']" position="attributes">
            <attribute name="t-if">company._fields.get('company_registry') and company.company_registry</attribute>
        </xpath>
    </template>
</odoo>