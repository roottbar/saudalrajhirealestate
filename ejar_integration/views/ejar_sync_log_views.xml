<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Ejar Sync Log Tree View -->
    <record id="view_ejar_sync_log_tree" model="ir.ui.view">
        <field name="name">ejar.sync.log.tree</field>
        <field name="model">ejar.sync.log</field>
        <field name="arch" type="xml">
            <list string="Ejar Sync Logs" decoration-success="status=='success'" 
                  decoration-warning="status=='pending'" decoration-danger="status=='failed'"
                  decoration-info="status=='in_progress'">
                <field name="sync_date"/>
                <field name="model_name"/>
                <field name="record_id"/>
                <field name="operation"/>
                <field name="status"/>
                <field name="retry_count"/>
                <field name="duration"/>
                <button name="action_retry" type="object" string="Retry" 
                        icon="fa-refresh" attrs="{'invisible': [('status', '!=', 'failed')]}"/>
                <button name="action_view_details" type="object" string="Details" 
                        icon="fa-info-circle"/>
            </list>
        </field>
    </record>

    <!-- Ejar Sync Log Form View -->
    <record id="view_ejar_sync_log_form" model="ir.ui.view">
        <field name="name">ejar.sync.log.form</field>
        <field name="model">ejar.sync.log</field>
        <field name="arch" type="xml">
            <form string="Ejar Sync Log" create="false" edit="false">
                <header>
                    <button name="action_retry" type="object" string="Retry Sync" 
                            class="btn-primary" attrs="{'invisible': [('status', '!=', 'failed')]}"/>
                    <button name="action_mark_resolved" type="object" string="Mark as Resolved" 
                            class="btn-success" attrs="{'invisible': [('status', '!=', 'failed')]}"/>
                    <field name="status" widget="statusbar" statusbar_visible="pending,in_progress,success,failed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="operation"/> - <field name="model_name"/>
                        </h1>
                        <div class="o_row">
                            <field name="sync_date" readonly="1"/>
                        </div>
                    </div>

                    <group>
                        <group name="sync_info" string="Sync Information">
                            <field name="model_name" readonly="1"/>
                            <field name="record_id" readonly="1"/>
                            <field name="operation" readonly="1"/>
                            <field name="status" readonly="1"/>
                            <field name="sync_date" readonly="1"/>
                            <field name="completion_date" readonly="1"/>
                        </group>
                        <group name="performance" string="Performance">
                            <field name="duration" readonly="1"/>
                            <field name="retry_count" readonly="1"/>
                            <field name="max_retries" readonly="1"/>
                            <field name="next_retry_date" readonly="1" attrs="{'invisible': [('status', '!=', 'failed')]}"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Request Data" name="request_data">
                            <group>
                                <field name="request_data" readonly="1" widget="ace" options="{'mode': 'json'}"/>
                            </group>
                        </page>
                        
                        <page string="Response Data" name="response_data">
                            <group>
                                <field name="response_data" readonly="1" widget="ace" options="{'mode': 'json'}"/>
                            </group>
                        </page>
                        
                        <page string="Error Details" name="error_details" attrs="{'invisible': [('error_message', '=', False)]}">
                            <group>
                                <field name="error_message" readonly="1"/>
                                <field name="error_code" readonly="1"/>
                                <field name="error_details" readonly="1" widget="ace" options="{'mode': 'json'}"/>
                            </group>
                        </page>
                        
                        <page string="Ejar Information" name="ejar_info">
                            <group>
                                <group name="ejar_request" string="Ejar Request">
                                    <field name="ejar_endpoint" readonly="1"/>
                                    <field name="ejar_method" readonly="1"/>
                                    <field name="ejar_request_id" readonly="1"/>
                                </group>
                                <group name="ejar_response" string="Ejar Response">
                                    <field name="ejar_response_code" readonly="1"/>
                                    <field name="ejar_response_message" readonly="1"/>
                                    <field name="ejar_transaction_id" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Ejar Sync Log Search View -->
    <record id="view_ejar_sync_log_search" model="ir.ui.view">
        <field name="name">ejar.sync.log.search</field>
        <field name="model">ejar.sync.log</field>
        <field name="arch" type="xml">
            <search string="Search Sync Logs">
                <field name="model_name"/>
                <field name="record_id"/>
                <field name="operation"/>
                <field name="error_message"/>
                <field name="ejar_endpoint"/>
                
                <filter string="Success" name="success" domain="[('status', '=', 'success')]"/>
                <filter string="Failed" name="failed" domain="[('status', '=', 'failed')]"/>
                <filter string="Pending" name="pending" domain="[('status', '=', 'pending')]"/>
                <filter string="In Progress" name="in_progress" domain="[('status', '=', 'in_progress')]"/>
                
                <separator/>
                <filter string="Create Operations" name="create" domain="[('operation', '=', 'create')]"/>
                <filter string="Update Operations" name="update" domain="[('operation', '=', 'update')]"/>
                <filter string="Delete Operations" name="delete" domain="[('operation', '=', 'delete')]"/>
                
                <separator/>
                <filter string="Properties" name="properties" domain="[('model_name', '=', 'ejar.property')]"/>
                <filter string="Contracts" name="contracts" domain="[('model_name', '=', 'ejar.contract')]"/>
                <filter string="Tenants" name="tenants" domain="[('model_name', '=', 'ejar.tenant')]"/>
                <filter string="Landlords" name="landlords" domain="[('model_name', '=', 'ejar.landlord')]"/>
                
                <separator/>
                <filter string="Today" name="today" 
                        domain="[('sync_date', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00')), ('sync_date', '&lt;=', context_today().strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter string="This Week" name="this_week" 
                        domain="[('sync_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d 00:00:00'))]"/>
                <filter string="This Month" name="this_month" 
                        domain="[('sync_date', '&gt;=', context_today().strftime('%Y-%m-01 00:00:00'))]"/>
                
                <separator/>
                <filter string="With Errors" name="with_errors" domain="[('error_message', '!=', False)]"/>
                <filter string="Retried" name="retried" domain="[('retry_count', '&gt;', 0)]"/>
                <filter string="Max Retries Reached" name="max_retries" domain="[('retry_count', '&gt;=', 'max_retries')]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Model" name="group_model" context="{'group_by': 'model_name'}"/>
                    <filter string="Operation" name="group_operation" context="{'group_by': 'operation'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'sync_date:day'}"/>
                    <filter string="Error Code" name="group_error" context="{'group_by': 'error_code'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Ejar Sync Log Calendar View -->
    <record id="view_ejar_sync_log_calendar" model="ir.ui.view">
        <field name="name">ejar.sync.log.calendar</field>
        <field name="model">ejar.sync.log</field>
        <field name="arch" type="xml">
            <calendar string="Sync Log Calendar" date_start="sync_date" 
                      color="status" quick_add="False" event_open_popup="True">
                <field name="model_name"/>
                <field name="operation"/>
                <field name="status"/>
            </calendar>
        </field>
    </record>

    <!-- Ejar Sync Log Pivot View -->
    <record id="view_ejar_sync_log_pivot" model="ir.ui.view">
        <field name="name">ejar.sync.log.pivot</field>
        <field name="model">ejar.sync.log</field>
        <field name="arch" type="xml">
            <pivot string="Sync Log Analysis">
                <field name="status" type="row"/>
                <field name="sync_date" type="col" interval="day"/>
                <field name="duration" type="measure"/>
                <field name="retry_count" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Ejar Sync Log Graph View -->
    <record id="view_ejar_sync_log_graph" model="ir.ui.view">
        <field name="name">ejar.sync.log.graph</field>
        <field name="model">ejar.sync.log</field>
        <field name="arch" type="xml">
            <graph string="Sync Statistics" type="line">
                <field name="sync_date" type="row" interval="day"/>
                <field name="duration" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Ejar Sync Log Action -->
    <record id="action_ejar_sync_log" model="ir.actions.act_window">
        <field name="name">Ejar Sync Logs</field>
        <field name="res_model">ejar.sync.log</field>
        <field name="view_mode">list,form,calendar,pivot,graph</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No sync logs found!
            </p>
            <p>
                Sync logs track all synchronization operations with the Ejar platform.
                They help monitor performance and troubleshoot integration issues.
            </p>
        </field>
    </record>

    <!-- Failed Sync Logs Action -->
    <record id="action_ejar_sync_log_failed" model="ir.actions.act_window">
        <field name="name">Failed Sync Logs</field>
        <field name="res_model">ejar.sync.log</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('status', '=', 'failed')]</field>
        <field name="context">{'default_status': 'failed'}</field>
    </record>

    <!-- Recent Sync Logs Action -->
    <record id="action_ejar_sync_log_recent" model="ir.actions.act_window">
        <field name="name">Recent Sync Logs</field>
        <field name="res_model">ejar.sync.log</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('sync_date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d 00:00:00'))]</field>
        <field name="context">{}</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_ejar_sync" name="Synchronization" parent="menu_ejar_main" sequence="90"/>
    <menuitem id="menu_ejar_sync_logs" name="Sync Logs" parent="menu_ejar_sync" 
              action="action_ejar_sync_log" sequence="10"/>
    <menuitem id="menu_ejar_sync_logs_failed" name="Failed Syncs" parent="menu_ejar_sync" 
              action="action_ejar_sync_log_failed" sequence="20"/>
    <menuitem id="menu_ejar_sync_logs_recent" name="Recent Syncs" parent="menu_ejar_sync" 
              action="action_ejar_sync_log_recent" sequence="30"/>
</odoo>