<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Ejar Landlord Tree View -->
    <record id="view_ejar_landlord_tree" model="ir.ui.view">
        <field name="name">ejar.landlord.tree</field>
        <field name="model">ejar.landlord</field>
        <field name="arch" type="xml">
            <list string="Ejar Landlords" decoration-success="verification_status=='verified'" 
                  decoration-warning="verification_status=='pending'" decoration-danger="verification_status=='rejected'"
                  decoration-muted="verification_status=='not_verified'">
                <field name="name"/>
                <field name="national_id"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="property_count"/>
                <field name="verification_status"/>
                <field name="ejar_synced"/>
                <button name="action_sync_to_ejar" type="object" string="Sync to Ejar" 
                        icon="fa-refresh" attrs="{'invisible': [('ejar_synced', '=', True)]}"/>
                <button name="action_verify" type="object" string="Verify" 
                        icon="fa-check" attrs="{'invisible': [('verification_status', '=', 'verified')]}"/>
            </list>
        </field>
    </record>

    <!-- Ejar Landlord Form View -->
    <record id="view_ejar_landlord_form" model="ir.ui.view">
        <field name="name">ejar.landlord.form</field>
        <field name="model">ejar.landlord</field>
        <field name="arch" type="xml">
            <form string="Ejar Landlord">
                <header>
                    <button name="action_verify" type="object" string="Verify" 
                            class="btn-primary" attrs="{'invisible': [('verification_status', '=', 'verified')]}"/>
                    <button name="action_reject" type="object" string="Reject" 
                            class="btn-danger" attrs="{'invisible': [('verification_status', 'in', ['rejected', 'verified'])]}"/>
                    <button name="action_sync_to_ejar" type="object" string="Sync to Ejar" 
                            class="btn-info" attrs="{'invisible': [('ejar_synced', '=', True)]}"/>
                    <field name="verification_status" widget="statusbar" statusbar_visible="not_verified,pending,verified,rejected"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_properties" type="object" class="oe_stat_button" icon="fa-building">
                            <field name="property_count" widget="statbutton" string="Properties"/>
                        </button>
                        <button name="action_view_contracts" type="object" class="oe_stat_button" icon="fa-file-text">
                            <field name="contract_count" widget="statbutton" string="Contracts"/>
                        </button>
                        <button name="action_view_payments" type="object" class="oe_stat_button" icon="fa-money">
                            <field name="payment_count" widget="statbutton" string="Payments"/>
                        </button>
                        <button name="action_view_ejar_profile" type="object" class="oe_stat_button" 
                                icon="fa-external-link" attrs="{'invisible': [('ejar_synced', '=', False)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">View in</span>
                                <span class="o_stat_text">Ejar</span>
                            </div>
                        </button>
                    </div>
                    
                    <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image_medium', 'size': [90, 90]}"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Landlord Name"/>
                        </h1>
                        <div class="o_row">
                            <field name="ejar_landlord_id" readonly="1" attrs="{'invisible': [('ejar_landlord_id', '=', False)]}"/>
                        </div>
                    </div>

                    <group>
                        <group name="personal_info" string="Personal Information">
                            <field name="national_id" required="1"/>
                            <field name="nationality" required="1"/>
                            <field name="date_of_birth"/>
                            <field name="gender"/>
                            <field name="marital_status"/>
                            <field name="occupation"/>
                        </group>
                        <group name="contact_info" string="Contact Information">
                            <field name="phone" required="1"/>
                            <field name="email"/>
                            <field name="alternative_phone"/>
                            <field name="preferred_language"/>
                            <field name="preferred_contact_method"/>
                        </group>
                    </group>

                    <group>
                        <group name="address" string="Address">
                            <field name="street"/>
                            <field name="street2"/>
                            <field name="city"/>
                            <field name="state"/>
                            <field name="zip"/>
                            <field name="country_id"/>
                        </group>
                        <group name="business_info" string="Business Information">
                            <field name="company_name"/>
                            <field name="commercial_registration"/>
                            <field name="tax_number"/>
                            <field name="business_type"/>
                            <field name="is_individual"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Verification" name="verification">
                            <group>
                                <group name="verification_info" string="Verification Information">
                                    <field name="verification_status" readonly="1"/>
                                    <field name="verification_date" readonly="1"/>
                                    <field name="verified_by" readonly="1"/>
                                    <field name="verification_notes" readonly="1"/>
                                </group>
                                <group name="documents" string="Required Documents">
                                    <field name="national_id_verified"/>
                                    <field name="ownership_deed_verified"/>
                                    <field name="commercial_registration_verified"/>
                                    <field name="tax_certificate_verified"/>
                                </group>
                            </group>
                            <separator string="Verification Comments"/>
                            <field name="verification_comments" placeholder="Add verification comments..."/>
                        </page>
                        
                        <page string="Banking Information" name="banking">
                            <group>
                                <group name="bank_details" string="Bank Details">
                                    <field name="bank_name"/>
                                    <field name="iban" required="1"/>
                                    <field name="account_number"/>
                                    <field name="account_holder_name"/>
                                </group>
                                <group name="payment_preferences" string="Payment Preferences">
                                    <field name="preferred_payment_method"/>
                                    <field name="payment_terms"/>
                                    <field name="auto_payment_enabled"/>
                                    <field name="payment_notification_enabled"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Properties" name="properties">
                            <field name="property_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="property_type"/>
                                    <field name="city"/>
                                    <field name="rental_price"/>
                                    <field name="status"/>
                                    <field name="ejar_synced"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Contracts" name="contracts">
                            <field name="contract_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="property_id"/>
                                    <field name="tenant_id"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="monthly_rent"/>
                                    <field name="status"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Financial Summary" name="financial">
                            <group>
                                <group name="income" string="Rental Income">
                                    <field name="total_monthly_income" readonly="1"/>
                                    <field name="total_annual_income" readonly="1"/>
                                    <field name="average_rental_price" readonly="1"/>
                                    <field name="occupancy_rate" readonly="1"/>
                                </group>
                                <group name="payments" string="Payment Statistics">
                                    <field name="total_received_payments" readonly="1"/>
                                    <field name="pending_payments" readonly="1"/>
                                    <field name="overdue_payments" readonly="1"/>
                                    <field name="last_payment_date" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Documents" name="documents">
                            <field name="document_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="document_type"/>
                                    <field name="upload_date"/>
                                    <field name="status"/>
                                    <field name="verified"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Ejar Integration" name="ejar_integration">
                            <group>
                                <group name="sync_status" string="Sync Status">
                                    <field name="ejar_synced" readonly="1"/>
                                    <field name="ejar_sync_date" readonly="1"/>
                                    <field name="auto_sync"/>
                                    <field name="last_sync_error" readonly="1" attrs="{'invisible': [('last_sync_error', '=', False)]}"/>
                                </group>
                                <group name="ejar_info" string="Ejar Information">
                                    <field name="ejar_landlord_id" readonly="1"/>
                                    <field name="ejar_verification_status" readonly="1"/>
                                    <field name="ejar_created_date" readonly="1"/>
                                    <field name="ejar_updated_date" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Ejar Landlord Search View -->
    <record id="view_ejar_landlord_search" model="ir.ui.view">
        <field name="name">ejar.landlord.search</field>
        <field name="model">ejar.landlord</field>
        <field name="arch" type="xml">
            <search string="Search Landlords">
                <field name="name" string="Landlord Name"/>
                <field name="national_id"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="nationality"/>
                <field name="company_name"/>
                <field name="commercial_registration"/>
                
                <filter string="Verified" name="verified" domain="[('verification_status', '=', 'verified')]"/>
                <filter string="Pending Verification" name="pending" domain="[('verification_status', '=', 'pending')]"/>
                <filter string="Not Verified" name="not_verified" domain="[('verification_status', '=', 'not_verified')]"/>
                <filter string="Rejected" name="rejected" domain="[('verification_status', '=', 'rejected')]"/>
                
                <separator/>
                <filter string="Individual" name="individual" domain="[('is_individual', '=', True)]"/>
                <filter string="Company" name="company" domain="[('is_individual', '=', False)]"/>
                
                <separator/>
                <filter string="Saudi Nationals" name="saudi" domain="[('nationality', '=', 'SA')]"/>
                <filter string="Expatriates" name="expat" domain="[('nationality', '!=', 'SA')]"/>
                
                <separator/>
                <filter string="Active Properties" name="active_properties" 
                        domain="[('property_ids.status', '=', 'available')]"/>
                <filter string="High Income" name="high_income" 
                        domain="[('total_monthly_income', '&gt;=', 50000)]"/>
                
                <separator/>
                <filter string="Synced to Ejar" name="synced" domain="[('ejar_synced', '=', True)]"/>
                <filter string="Not Synced" name="not_synced" domain="[('ejar_synced', '=', False)]"/>
                <filter string="Auto Sync Enabled" name="auto_sync" domain="[('auto_sync', '=', True)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Verification Status" name="group_verification" context="{'group_by': 'verification_status'}"/>
                    <filter string="Nationality" name="group_nationality" context="{'group_by': 'nationality'}"/>
                    <filter string="City" name="group_city" context="{'group_by': 'city'}"/>
                    <filter string="Business Type" name="group_business" context="{'group_by': 'business_type'}"/>
                    <filter string="Individual/Company" name="group_type" context="{'group_by': 'is_individual'}"/>
                    <filter string="Sync Status" name="group_sync" context="{'group_by': 'ejar_synced'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Ejar Landlord Kanban View -->
    <record id="view_ejar_landlord_kanban" model="ir.ui.view">
        <field name="name">ejar.landlord.kanban</field>
        <field name="model">ejar.landlord</field>
        <field name="arch" type="xml">
            <kanban default_group_by="verification_status">
                <field name="name"/>
                <field name="national_id"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="property_count"/>
                <field name="total_monthly_income"/>
                <field name="verification_status"/>
                <field name="ejar_synced"/>
                <field name="image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('ejar.landlord', 'image', record.id.raw_value)" alt="Landlord"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="national_id"/>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <i class="fa fa-phone"/> <field name="phone"/>
                                </div>
                                <div class="o_kanban_record_subtitle" t-if="record.email.raw_value">
                                    <i class="fa fa-envelope"/> <field name="email"/>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <i class="fa fa-building"/> <field name="property_count"/> Properties
                                </div>
                                <div class="o_kanban_record_subtitle" t-if="record.total_monthly_income.raw_value">
                                    <i class="fa fa-money"/> <field name="total_monthly_income"/> SAR/month
                                </div>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_footer_left">
                                    <span class="badge badge-pill" t-att-class="record.verification_status.raw_value == 'verified' ? 'badge-success' : record.verification_status.raw_value == 'pending' ? 'badge-warning' : 'badge-secondary'">
                                        <field name="verification_status"/>
                                    </span>
                                </div>
                                <div class="o_kanban_footer_right">
                                    <span t-if="record.ejar_synced.raw_value" class="badge badge-success">
                                        <i class="fa fa-check"/> Synced
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Ejar Landlord Action -->
    <record id="action_ejar_landlord" model="ir.actions.act_window">
        <field name="name">Ejar Landlords</field>
        <field name="res_model">ejar.landlord</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Ejar landlord!
            </p>
            <p>
                Landlords are property owners who rent out their properties. Manage their information,
                verification status, and sync with Ejar platform for compliance.
            </p>
        </field>
    </record>

    <!-- Verified Landlords Action -->
    <record id="action_ejar_landlord_verified" model="ir.actions.act_window">
        <field name="name">Verified Landlords</field>
        <field name="res_model">ejar.landlord</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('verification_status', '=', 'verified')]</field>
        <field name="context">{'default_verification_status': 'verified'}</field>
    </record>

    <!-- Pending Verification Action -->
    <record id="action_ejar_landlord_pending" model="ir.actions.act_window">
        <field name="name">Pending Verification</field>
        <field name="res_model">ejar.landlord</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('verification_status', '=', 'pending')]</field>
        <field name="context">{'default_verification_status': 'pending'}</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_ejar_landlords" name="Landlords" parent="menu_ejar_main" 
              action="action_ejar_landlord" sequence="40"/>
    <menuitem id="menu_ejar_landlords_verified" name="Verified Landlords" parent="menu_ejar_landlords" 
              action="action_ejar_landlord_verified" sequence="10"/>
    <menuitem id="menu_ejar_landlords_pending" name="Pending Verification" parent="menu_ejar_landlords" 
              action="action_ejar_landlord_pending" sequence="20"/>
</odoo>