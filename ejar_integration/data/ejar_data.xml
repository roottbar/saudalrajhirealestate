<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Default Ejar Configuration -->
    <record id="default_ejar_config" model="ejar.config">
        <field name="name">Default Ejar Configuration</field>
        <field name="api_base_url">https://api.ejar.sa/v1</field>
        <field name="sandbox_mode">True</field>
        <field name="timeout">30</field>
        <field name="retry_attempts">3</field>
        <field name="auto_sync">False</field>
        <field name="sync_interval">60</field>
        <field name="webhook_enabled">True</field>
        <field name="notification_enabled">True</field>
        <field name="active">True</field>
    </record>

    <!-- Default Notification Templates -->
    <record id="template_contract_created" model="ejar.notification.template">
        <field name="name">Contract Created</field>
        <field name="template_type">contract_created</field>
        <field name="subject_ar">تم إنشاء عقد إيجار جديد</field>
        <field name="subject_en">New Rental Contract Created</field>
        <field name="body_ar">تم إنشاء عقد إيجار جديد برقم: ${contract_number}
العقار: ${property_name}
المستأجر: ${tenant_name}
المؤجر: ${landlord_name}
تاريخ البداية: ${start_date}
تاريخ النهاية: ${end_date}
القيمة الإجمالية: ${total_amount} ريال</field>
        <field name="body_en">A new rental contract has been created with number: ${contract_number}
Property: ${property_name}
Tenant: ${tenant_name}
Landlord: ${landlord_name}
Start Date: ${start_date}
End Date: ${end_date}
Total Amount: ${total_amount} SAR</field>
        <field name="active">True</field>
    </record>

    <record id="template_payment_received" model="ejar.notification.template">
        <field name="name">Payment Received</field>
        <field name="template_type">payment_received</field>
        <field name="subject_ar">تم استلام دفعة إيجار</field>
        <field name="subject_en">Rental Payment Received</field>
        <field name="body_ar">تم استلام دفعة إيجار بمبلغ: ${amount} ريال
رقم العقد: ${contract_number}
تاريخ الدفع: ${payment_date}
طريقة الدفع: ${payment_method}</field>
        <field name="body_en">Rental payment received for amount: ${amount} SAR
Contract Number: ${contract_number}
Payment Date: ${payment_date}
Payment Method: ${payment_method}</field>
        <field name="active">True</field>
    </record>

    <record id="template_contract_expiring" model="ejar.notification.template">
        <field name="name">Contract Expiring</field>
        <field name="template_type">contract_expiring</field>
        <field name="subject_ar">تنبيه: عقد الإيجار على وشك الانتهاء</field>
        <field name="subject_en">Alert: Rental Contract Expiring Soon</field>
        <field name="body_ar">عقد الإيجار رقم: ${contract_number} على وشك الانتهاء
تاريخ الانتهاء: ${end_date}
العقار: ${property_name}
يرجى اتخاذ الإجراءات اللازمة لتجديد العقد أو إنهائه.</field>
        <field name="body_en">Rental contract number: ${contract_number} is expiring soon
End Date: ${end_date}
Property: ${property_name}
Please take necessary actions to renew or terminate the contract.</field>
        <field name="active">True</field>
    </record>

    <!-- Default Property Types -->
    <record id="property_type_apartment" model="ejar.property.type">
        <field name="name">شقة</field>
        <field name="name_en">Apartment</field>
        <field name="code">APT</field>
        <field name="ejar_code">apartment</field>
        <field name="active">True</field>
    </record>

    <record id="property_type_villa" model="ejar.property.type">
        <field name="name">فيلا</field>
        <field name="name_en">Villa</field>
        <field name="code">VIL</field>
        <field name="ejar_code">villa</field>
        <field name="active">True</field>
    </record>

    <record id="property_type_office" model="ejar.property.type">
        <field name="name">مكتب</field>
        <field name="name_en">Office</field>
        <field name="code">OFF</field>
        <field name="ejar_code">office</field>
        <field name="active">True</field>
    </record>

    <record id="property_type_shop" model="ejar.property.type">
        <field name="name">محل تجاري</field>
        <field name="name_en">Shop</field>
        <field name="code">SHP</field>
        <field name="ejar_code">shop</field>
        <field name="active">True</field>
    </record>

    <record id="property_type_warehouse" model="ejar.property.type">
        <field name="name">مستودع</field>
        <field name="name_en">Warehouse</field>
        <field name="code">WHR</field>
        <field name="ejar_code">warehouse</field>
        <field name="active">True</field>
    </record>

    <!-- Default Payment Methods -->
    <record id="payment_method_bank_transfer" model="ejar.payment.method">
        <field name="name">تحويل بنكي</field>
        <field name="name_en">Bank Transfer</field>
        <field name="code">BANK</field>
        <field name="ejar_code">bank_transfer</field>
        <field name="active">True</field>
    </record>

    <record id="payment_method_cash" model="ejar.payment.method">
        <field name="name">نقداً</field>
        <field name="name_en">Cash</field>
        <field name="code">CASH</field>
        <field name="ejar_code">cash</field>
        <field name="active">True</field>
    </record>

    <record id="payment_method_check" model="ejar.payment.method">
        <field name="name">شيك</field>
        <field name="name_en">Check</field>
        <field name="code">CHK</field>
        <field name="ejar_code">check</field>
        <field name="active">True</field>
    </record>

    <!-- Default Contract Statuses -->
    <record id="contract_status_draft" model="ejar.contract.status">
        <field name="name">مسودة</field>
        <field name="name_en">Draft</field>
        <field name="code">DRAFT</field>
        <field name="ejar_code">draft</field>
        <field name="active">True</field>
    </record>

    <record id="contract_status_active" model="ejar.contract.status">
        <field name="name">نشط</field>
        <field name="name_en">Active</field>
        <field name="code">ACTIVE</field>
        <field name="ejar_code">active</field>
        <field name="active">True</field>
    </record>

    <record id="contract_status_expired" model="ejar.contract.status">
        <field name="name">منتهي</field>
        <field name="name_en">Expired</field>
        <field name="code">EXPIRED</field>
        <field name="ejar_code">expired</field>
        <field name="active">True</field>
    </record>

    <record id="contract_status_terminated" model="ejar.contract.status">
        <field name="name">مفسوخ</field>
        <field name="name_en">Terminated</field>
        <field name="code">TERMINATED</field>
        <field name="ejar_code">terminated</field>
        <field name="active">True</field>
    </record>

    <!-- Scheduled Actions -->
    <record id="ir_cron_sync_ejar_data" model="ir.cron">
        <field name="name">Sync Ejar Data</field>
        <field name="model_id" ref="model_ejar_sync_log"/>
        <field name="state">code</field>
        <field name="code">model.process_sync_queue()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="active">False</field>
    </record>

    <record id="ir_cron_process_notifications" model="ir.cron">
        <field name="name">Process Ejar Notifications</field>
        <field name="model_id" ref="model_ejar_notification"/>
        <field name="state">code</field>
        <field name="code">model.process_scheduled_notifications()</field>
        <field name="interval_number">15</field>
        <field name="interval_type">minutes</field>
        <field name="active">True</field>
    </record>

    <record id="ir_cron_check_expiring_contracts" model="ir.cron">
        <field name="name">Check Expiring Contracts</field>
        <field name="model_id" ref="model_ejar_contract"/>
        <field name="state">code</field>
        <field name="code">model.check_expiring_contracts()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
    </record>

    <record id="ir_cron_cleanup_sync_logs" model="ir.cron">
        <field name="name">Cleanup Old Sync Logs</field>
        <field name="model_id" ref="model_ejar_sync_log"/>
        <field name="state">code</field>
        <field name="code">model.cleanup_old_sync_logs()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">weeks</field>
        <field name="active">True</field>
    </record>
</odoo>
