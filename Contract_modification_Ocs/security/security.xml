<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- مجموعة صلاحيات مديري التأجير -->
        <record model="ir.module.category" id="module_category_rental_management">
            <field name="name">إدارة التأجير</field>
            <field name="description">إدارة أوامر التأجير والموافقات</field>
        </record>

        <record model="res.groups" id="group_rental_user">
            <field name="name">مستخدم التأجير</field>
            <field name="category_id" ref="module_category_rental_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record model="res.groups" id="group_rental_manager">
            <field name="name">مدير التأجير</field>
            <field name="category_id" ref="module_category_rental_management"/>
            <field name="implied_ids" eval="[(4, ref('group_rental_user'))]"/>
        </record>

    </data>
</odoo>
