<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Resume ATS Settings View -->
        <record id="res_config_settings_view_form_hr_resume_ats" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.hr.resume.ats</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="90"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Resume ATS" string="Resume ATS" data-key="hr_resume_ats">
                        
                        <!-- AI Configuration Section -->
                        <h2>AI Configuration</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="enable_ai_analysis"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="enable_ai_analysis"/>
                                    <div class="text-muted">
                                        Enable AI-powered resume analysis using OpenAI
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mt16 o_settings_container" invisible="('enable_ai_analysis', '=', False)">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="openai_api_key" password="True" placeholder="sk-..."/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="openai_api_key"/>
                                    <div class="text-muted">
                                        Your OpenAI API key for AI analysis
                                    </div>
                                    <div class="mt8">
                                        <button name="action_test_openai_connection" type="object" 
                                                string="Test Connection" class="btn-secondary"
                                                invisible="('openai_api_key', '=', False)"/>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="openai_model"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="openai_model"/>
                                    <div class="text-muted">
                                        Choose the OpenAI model for analysis
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mt16 o_settings_container" invisible="('enable_ai_analysis', '=', False)">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="openai_max_tokens"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="openai_max_tokens"/>
                                    <div class="text-muted">
                                        Maximum tokens for AI responses (100-8000)
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="openai_temperature"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="openai_temperature"/>
                                    <div class="text-muted">
                                        Controls randomness (0.0-1.0, lower = more focused)
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Analysis Features Section -->
                        <h2>Analysis Features</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="auto_extract_info"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="auto_extract_info"/>
                                    <div class="text-muted">
                                        Automatically extract candidate information
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="detailed_skill_analysis"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="detailed_skill_analysis"/>
                                    <div class="text-muted">
                                        Perform detailed skill matching and analysis
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="experience_relevance_check"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="experience_relevance_check"/>
                                    <div class="text-muted">
                                        Check experience relevance to job position
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="education_verification"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="education_verification"/>
                                    <div class="text-muted">
                                        Enable education verification (requires setup)
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Scoring Configuration Section -->
                        <h2>Scoring Configuration</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12">
                                <div class="alert alert-info">
                                    <strong>Note:</strong> All weights must sum to 100%. Adjust the weights based on your hiring priorities.
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="ats_weight" widget="float"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="ats_weight"/>
                                    <div class="text-muted">
                                        Weight of ATS compatibility in overall score
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="skills_weight" widget="float"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="skills_weight"/>
                                    <div class="text-muted">
                                        Weight of skills match in overall score
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="experience_weight" widget="float"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="experience_weight"/>
                                    <div class="text-muted">
                                        Weight of experience relevance in overall score
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="education_weight" widget="float"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="education_weight"/>
                                    <div class="text-muted">
                                        Weight of education match in overall score
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mt16 o_settings_container">
                            <div class="col-12">
                                <button name="action_reset_weights_to_default" type="object" 
                                        string="Reset to Default Weights" class="btn-secondary"/>
                            </div>
                        </div>
                        
                        <!-- File Processing Section -->
                        <h2>File Processing</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="max_file_size_mb"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="max_file_size_mb"/>
                                    <div class="text-muted">
                                        Maximum resume file size in MB (1-50)
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="allowed_file_types"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="allowed_file_types"/>
                                    <div class="text-muted">
                                        Allowed file extensions (comma-separated)
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Language and Notifications Section -->
                        <h2>Language and Notifications</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="analysis_language"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="analysis_language"/>
                                    <div class="text-muted">
                                        Language for AI analysis and reports
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="notify_on_analysis_complete"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="notify_on_analysis_complete"/>
                                    <div class="text-muted">
                                        Send notification when analysis is completed
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="notify_hr_managers"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="notify_hr_managers"/>
                                    <div class="text-muted">
                                        Notify HR managers of new analyses
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>