<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <template id="search_template_conso_extra_options" inherit_id="account_reports.search_template_extra_options">
        <xpath expr="//div[hasclass('o_filter_menu')]" position="inside">
            <a role="menuitem" class="dropdown-item js_account_report_bool_filter oe_level1"
               t-if="options.get('level1') != None" title="Unfold Level 1" data-filter="level1">Unfold Level 1
            </a>
            <a role="menuitem" class="dropdown-item js_account_report_bool_filter"
               t-if="options.get('level2') != None" title="Unfold Level 2" data-filter="level2">Unfold Level 2
            </a>
            <a role="menuitem" class="dropdown-item js_account_report_bool_filter"
               t-if="options.get('level3') != None" title="Unfold Level 3" data-filter="level3">Unfold Level 3
            </a>

        </xpath>
    </template>

</odoo>
