# Saudi Al-Rajhi Real Estate - Environment Configuration
# Copy this file to .env and update the values

# ===================================================
# ODOO CONFIGURATION
# ===================================================
ODOO_VERSION=18.0
ODOO_DB_HOST=localhost
ODOO_DB_PORT=5432
ODOO_DB_NAME=odoo_dev
ODOO_DB_USER=odoo
ODOO_DB_PASSWORD=odoo
ODOO_ADMIN_PASSWORD=admin

# ===================================================
# DEVELOPMENT SETTINGS
# ===================================================
DEBUG=True
LOG_LEVEL=DEBUG
PYTHONPATH=.
PYTHONUNBUFFERED=1

# ===================================================
# DATABASE CONFIGURATION
# ===================================================
DATABASE_URL=postgresql://odoo:odoo@localhost:5432/odoo_dev
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ===================================================
# REDIS CONFIGURATION (if using Redis)
# ===================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ===================================================
# EMAIL CONFIGURATION
# ===================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_SSL=False
SMTP_TLS=True

# ===================================================
# FILE STORAGE
# ===================================================
FILESTORE_PATH=./filestore
ATTACHMENT_PATH=./attachments

# ===================================================
# SECURITY SETTINGS
# ===================================================
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# ===================================================
# API CONFIGURATION
# ===================================================
API_BASE_URL=http://localhost:8069
API_VERSION=v1
API_TIMEOUT=30

# ===================================================
# EXTERNAL SERVICES
# ===================================================
# E-Invoice KSA
EINV_SA_CLIENT_ID=your-client-id
EINV_SA_CLIENT_SECRET=your-client-secret
EINV_SA_BASE_URL=https://api-sandbox.zatca.gov.sa

# Ejar Integration
EJAR_API_URL=https://api.ejar.sa
EJAR_API_KEY=your-api-key
EJAR_API_SECRET=your-api-secret

# Google Maps
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# WhatsApp Integration
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_ACCESS_TOKEN=your-whatsapp-token

# ===================================================
# MONITORING & LOGGING
# ===================================================
SENTRY_DSN=your-sentry-dsn
LOG_FILE_PATH=./logs/odoo.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# ===================================================
# CURSOR IDE CONFIGURATION
# ===================================================
CURSOR_PYTHON_INTERPRETER=python
CURSOR_PYTHON_LINTING=True
CURSOR_PYTHON_FORMATTING=True
CURSOR_PYTHON_AUTO_IMPORT=True
CURSOR_PYTHON_TYPE_HINTS=True

# ===================================================
# DEVELOPMENT TOOLS
# ===================================================
PYTEST_CURRENT_TEST=True
PYTEST_ADDOPTS=-v --tb=short
COVERAGE_RC_FILE=.coveragerc
BLACK_CONFIG_FILE=pyproject.toml
ISORT_CONFIG_FILE=pyproject.toml
FLAKE8_CONFIG_FILE=.flake8
MYPY_CONFIG_FILE=pyproject.toml

# ===================================================
# PERFORMANCE SETTINGS
# ===================================================
WORKER_COUNT=4
MAX_CRON_THREADS=2
PROXY_MODE=True
LIMIT_MEMORY_HARD=2684354560
LIMIT_MEMORY_SOFT=2147483648
LIMIT_REQUEST=8192
LIMIT_TIME_CPU=600
LIMIT_TIME_REAL=1200

# ===================================================
# BACKUP CONFIGURATION
# ===================================================
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=True
BACKUP_ENCRYPTION=True